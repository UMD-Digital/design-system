{
  "name": "@universityofmaryland/design-system",
  "version": "0.0.1",
  "description": "UMD Design System",
  "license": "MIT",
  "repository": "",
  "private": true,
  "scripts": {
    "build": "npx lerna run build",
    "clean": "npx lerna run clean",
    "components": "npx lerna run start --scope=@universityofmaryland/web-components-library",
    "variables": "npx lerna run start --scope=@universityofmaryland/variables",
    "theme": "npx lerna run start --scope=@universityofmaryland/theme",
    "reset": "yarn clean && rm -rf node_modules && rm -rf packages/*/node_modules && yarn install --frozen-lock",
    "start": "yarn lerna -- watch -- lerna run build "
  },
  "workspaces": [
    "packages/variables",
    "packages/theme",
    "packages/components",
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/register": "^7.22.15",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.0.3",
    "prettier-plugin-twig-melody": "^0.4.6",
    "style-loader": "^3.3.3",
    "to-string-loader": "^1.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.5.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "lerna": "^7.4.1",
    "tailwindcss": "^3.3.5"
  }
}
