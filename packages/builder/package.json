{
  "name": "@universityofmaryland/web-builder-library",
  "version": "1.0.1-beta.1",
  "description": "Element Builder for the University of Maryland Design System",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "default": "./dist/core/index.js"
    },
    "./core/ElementBuilder": {
      "types": "./dist/core/ElementBuilder.d.ts",
      "import": "./dist/core/ElementBuilder.js",
      "default": "./dist/core/ElementBuilder.js"
    },
    "./core/StyleManager": {
      "types": "./dist/core/StyleManager.d.ts",
      "import": "./dist/core/StyleManager.js",
      "default": "./dist/core/StyleManager.js"
    },
    "./core/LifecycleManager": {
      "types": "./dist/core/LifecycleManager.d.ts",
      "import": "./dist/core/LifecycleManager.js",
      "default": "./dist/core/LifecycleManager.js"
    },
    "./core/types": {
      "types": "./dist/core/types.d.ts",
      "import": "./dist/core/types.js",
      "default": "./dist/core/types.js"
    }
  },
  "license": "MIT",
  "repository": "",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rm -rf dist build",
    "docs": "npx typedoc --options ./typedoc.json",
    "prebuild": "node ../../scripts/update-badges.js",
    "release": "npm run test && npm run build && npm publish --access public",
    "build": "vite build",
    "dev": "vite build --watch",
    "start": "npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:snapshot": "jest --updateSnapshot"
  },
  "peerDependencies": {
    "@universityofmaryland/web-styles-library": "^1.0.0",
    "@universityofmaryland/web-utilities-library": "^1.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^7.2.1",
    "typescript": "^5.8.2",
    "vite": "^7.1.4",
    "vite-plugin-checker": "^0.10.3",
    "vite-plugin-dts": "^4.5.4"
  }
}
