{
  "name": "@universityofmaryland/web-components-library",
  "version": "1.14.18",
  "description": "UMD Web Components",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./cdn": {
      "types": "./dist/cdn.d.ts",
      "import": "./dist/cdn.js",
      "require": "./dist/cdn.js"
    },
    "./bundle": {
      "types": "./dist/bundle.d.ts",
      "import": "./dist/bundle.js",
      "require": "./dist/bundle.js"
    },
    "./structural": {
      "types": "./dist/structural.d.ts",
      "import": "./dist/structural.js",
      "require": "./dist/structural.js"
    },
    "./interactive": {
      "types": "./dist/interactive.d.ts",
      "import": "./dist/interactive.js",
      "require": "./dist/interactive.js"
    },
    "./feed": {
      "types": "./dist/feed.d.ts",
      "import": "./dist/feed.js",
      "require": "./dist/feed.js"
    },
    "./content": {
      "types": "./dist/content.d.ts",
      "import": "./dist/content.js",
      "require": "./dist/content.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "require": "./dist/components/*.js"
    }
  },
  "license": "MIT",
  "repository": "",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "docs": "npx typedoc --options ./typedoc.json",
    "prebuild": "node ../../source/update-badges.js",
    "release": "npm run test && npm run build && npm publish --access public",
    "build:cdn": "BUILD_CDN=true vite build --mode production",
    "build:bundle": "BUILD_BUNDLE=true vite build --mode production",
    "build": "vite build --mode production && npm run build:cdn && npm run build:bundle",
    "vite": "vite build --mode development --watch",
    "start": "npm run vite",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@types/postcss-js": "^4.0.4",
    "@testing-library/jest-dom": "^6.1.5",
    "postcss-js": "^4.0.1",
    "tw-to-css": "^0.0.12"
  },
  "devDependencies": {
    "vite-plugin-dts": "^4.5.4"
  }
}
