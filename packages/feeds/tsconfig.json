{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "source",
    "baseUrl": "source",
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "paths": {
      "@universityofmaryland/web-token-library": ["../../tokens/dist/index.d.ts"],
      "@universityofmaryland/web-token-library/*": ["../../tokens/dist/*"],
      "@universityofmaryland/web-utilities-library": ["../../utilities/dist/index.d.ts"],
      "@universityofmaryland/web-utilities-library/*": ["../../utilities/dist/*"],
      "@universityofmaryland/web-builder-library": ["../../builder/dist/index.d.ts"],
      "@universityofmaryland/web-builder-library/*": ["../../builder/dist/*"],
      "@universityofmaryland/web-elements-library": ["../../elements/dist/index.d.ts"],
      "@universityofmaryland/web-elements-library/*": ["../../elements/dist/*"],
      "@universityofmaryland/web-styles-library": ["../../styles/dist/index.d.ts"],
      "@universityofmaryland/web-styles-library/*": ["../../styles/dist/*"]
    }
  },
  "include": [
    "./source"
  ]
}