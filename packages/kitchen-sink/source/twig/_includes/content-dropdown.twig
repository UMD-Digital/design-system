{% macro ContentVariations() %}
  <div class="umd-input-select">
    <label class="sr-only" for="content-variation">
      Choose content variation
    </label>
    <select id="content-variation" aria-live="polite">
      <option value="succinct">
        Succinct
      </option>

      <option value="normal" selected="">
        Normal
      </option>

      <option value="verbose">
        Verbose
      </option>
    </select>
  </div>
{% endmacro %}

