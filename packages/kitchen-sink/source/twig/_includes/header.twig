{% import '../sections/variables/_data.twig' as Variable %}
{% import '../sections/layout/_data.twig' as Layout %}
{% import '../sections/theme/_data.twig' as Theme %}
{% import '../sections/components/_data.twig' as Components %}
{% import '../sections/feeds/_data.twig' as Feeds %}
{% import '../sections/templates/_data.twig' as Templates %}

<header style="z-index: 99999;">
  <div class="umd-lock">
    <nav style="display: flex; justify-content: flex-end;">
      <umd-element-nav-item>
        <a slot="primary-link" href="/"><span>Home</span></a>
        <div slot="dropdown-links">
          {{ Variable.HeaderLinks() }}
        </div>
      </umd-element-nav-item>

      <umd-element-nav-item>
        <a slot="primary-link" href="{{ Layout.GetUrl() }}">
          <span>Layout</span>
        </a>
        <div slot="dropdown-links">
          {{ Layout.LayoutLinks() }}
        </div>
      </umd-element-nav-item>

      <umd-element-nav-item>
        <a slot="primary-link" href="{{ Theme.GetUrl() }}">
          <span>Theme</span>
        </a>
        <div slot="dropdown-links">
          {{ Theme.HeaderLinks() }}
        </div>
      </umd-element-nav-item>

      <umd-element-nav-item>
        <a slot="primary-link" href="{{ Components.GetUrl() }}">
          <span>Web Components</span>
        </a>
        <div slot="dropdown-links">
          {{ Components.HeaderLinks() }}
        </div>
      </umd-element-nav-item>

      <umd-element-nav-item>
        <a slot="primary-link" href="{{ Feeds.GetUrl() }}">
          <span>Feeds</span>
        </a>
        <div slot="dropdown-links">
          {{ Feeds.HeaderLinks() }}
        </div>
      </umd-element-nav-item>

      <umd-element-nav-item>
        <a slot="primary-link" href="{{ Templates.GetUrl() }}">
          <span>Templates</span>
        </a>
        <div slot="dropdown-links">
          {{ Templates.HeaderLinks() }}
        </div>
      </umd-element-nav-item>
    </nav>
  </div>
</header>
