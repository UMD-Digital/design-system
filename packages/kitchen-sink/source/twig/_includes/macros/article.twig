{% import 'fields/call-to-action.twig' as CallToAction %}
{% import 'fields/eyebrow.twig' as Eyebrow %}
{% import 'fields/headline.twig' as Headline %}
{% import 'fields/text-slot-rich-text.twig' as RichText %}
{% import 'fields/date.twig' as Date %}

{% set url = params.url ?? 'https://umd.edu' %}

{% macro NormalCardBody(params) %}
  {% set attrs = '' %}

  {% set hasDate = params.date ?? true %}
  {% set hasCtaLink = params.ctaLink ?? true %}
  {% set hasEyebrow = params.eyebrow ?? true %}
  {% set hasHeadline = params.headline ?? true %}
  {% set hasRichText = params.text ?? true %}

  {% if params.theme == 'dark' %}
    {% set attrs = attrs ~ 'theme="' ~ params.theme ~ '"' %}
  {% endif %}

  {% if params.aligned %}
    {% set attrs = attrs ~ 'aligned="true"' %}
  {% endif %}

  {% if params.border %}
    {% set attrs = attrs ~ 'border="true"' %}
  {% endif %}

  <umd-element-article {{ attrs }}>
    {% if params.image %}
      <a slot="image"
        href="{{ url }}"
        target="_blank"
        data-caption="Lorem ipsum dolor">
        <img src="{{ params.image }}" alt="Example Alt Text" />
      </a>
    {% endif %}

    {% if hasEyebrow %}
      {{ Eyebrow.EyebrowNormal() }}
    {% endif %}

    {% if hasHeadline %}
      {{ Headline.CardHeadlineNormal() }}
    {% endif %}

    {% if hasRichText %}
      {{ RichText.CardRichTextNormal() }}
    {% endif %}

    {% if hasDate %}
      {{ Date.RandomDate() }}
    {% endif %}

    {% if hasCtaLink %}
      {{
        CallToAction.InternalCallToAction({
          theme: params.theme
        })
      }}
    {% endif %}
  </umd-element-article>
{% endmacro %}
