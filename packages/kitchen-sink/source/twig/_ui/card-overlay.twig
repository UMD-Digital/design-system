{% import '../_ui/fields/eyebrow.twig' as Eyebrow %}
{% import '../_ui/fields/headline.twig' as Headline %}
{% import '../_ui/fields/text-slot-rich-text.twig' as RichText %}
{% import '../_ui/fields/call-to-action.twig' as CallToAction %}

{% set url = params.url ?? 'https://umd.edu' %}

{% macro CtaOptions(params) %}
  {% if params == 'download' %}
    <a href="{{ url }}"
      rel="noopener noreferrer"
      download
      slot="cta-icon"
      aria-label="example label">

    </a>
  {% endif %}

  {% if params == 'external' %}
    <a href="{{ url }}"
      rel="noopener noreferrer"
      target="_blank"
      slot="cta-icon"
      aria-label="example label">

    </a>
  {% endif %}

  {% if params == 'interanl' %}
    <a href="{{ url }}"
      rel="noopener noreferrer"
      slot="cta-icon"
      aria-label="example label">

    </a>
  {% endif %}
{% endmacro %}

{% macro FullCardBody(params) %}
  {% set attrs = '' %}

  {% set hasEyebrow = params.eyebrow ?? true %}
  {% set hasHeadline = params.headline ?? true %}
  {% set hasDate = params.date ?? true %}
  {% set hasCtaLink = params.ctaLink ?? true %}

  {% set richTextType = params.text ?? 'normal' %}

  {% if params.theme %}
    {% set attrs = attrs ~ 'theme="' ~ params.theme ~ '"' %}
  {% endif %}

  <umd-element-card-overlay {{ attrs }}>
    {% if params.image %}
      <img slot="image" src="{{ params.image }}" alt="Example Alt Text" />
    {% endif %}

    {% if hasEyebrow %}
      {{ Eyebrow.EyebrowNormal() }}
    {% endif %}

    {% if hasHeadline %}
      {{ Headline.CardHeadlineSuccinct() }}
    {% endif %}
    {% if richTextType == 'succinct' %}
      {{ RichText.CardRichTextSuccinct() }}
    {% endif %}

    {% if richTextType == 'normal' %}
      {{ RichText.CardRichTextNormal() }}
    {% endif %}

    {% if richTextType == 'verbose' %}
      {{ RichText.CardRichTextVerbose() }}
    {% endif %}

    {% if hasDate %}
      <div slot="date">
        <date>
          September 31, 2023
        </date>
      </div>
    {% endif %}

    {% if hasCtaLink %}
      {{ CallToAction.InternalCallToAction() }}
    {% endif %}

    {% if params.ctaOption %}
      {{ _self.CtaOptions(params.ctaOption) }}
    {% endif %}
  </umd-element-card-overlay>
{% endmacro %}
