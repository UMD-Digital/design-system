{% import '../_ui/fields/call-to-action.twig' as CallToAction %}

{% macro FullCardBody(params) %}
  {% set attrs = '' %}

  {% set hasEyebrow = params.eyebrow ?? true %}
  {% set hasHeadline = params.headline ?? true %}
  {% set hasDate = params.date ?? true %}
  {% set hasCtaLink = params.ctaLink ?? true %}

  {% set richTextType = params.text ?? 'full' %}

  {% if params.theme %}
    {% set attrs = attrs ~ 'theme="dark"' %}
  {% endif %}

  {% if params.aligned %}
    {% set attrs = attrs ~ 'aligned="true"' %}
  {% endif %}

  {% if params.border %}
    {% set attrs = attrs ~ 'border="true"' %}
  {% endif %}

  <umd-element-card {{ attrs }}>
    {% if params.image %}
      <a slot="image" href="https://google.com" target="_blank">
        <img src="{{ params.image }}" alt="Example Alt Text" />
      </a>
    {% endif %}

    {% if hasEyebrow %}
      <a href="https://google.com" target="_blank" slot="eyebrow">
        Optional Short Tagline
      </a>
    {% endif %}
    {% if hasHeadline %}
      <div slot="headline">
        <h3>
          <a href="https://google.com">Lorem Ipsum Dolor Sit Amet</a>
        </h3>
      </div>
    {% endif %}
    {% if richTextType == 'full' %}
      <div slot="text">
        <div>
          <p>
            <strong>Duis aute irure dolor in reprehenderit in voluptate</strong>
            <i>velit esse cillum dolore eu fugiat nulla pariatur</i>. <a href="https://google.com">
              Excepteur sint occaecat cupidatat non proident
            </a>, sunt in culpa qui officia deserunt mollit anim id est laborum.
          </p>
        </div>
      </div>
    {% endif %}
    {% if richTextType == 'small' %}
      <div slot="text">
        <p>
          <strong>Duis aute irure dolor in reprehenderit</strong>
        </p>
      </div>
    {% endif %}

    {% if hasDate %}
      <div slot="date">
        <date>
          September 31, 2023
        </date>
      </div>
    {% endif %}

    {% if hasCtaLink %}
      {{ CallToAction.CallToAction() }}
    {% endif %}
  </umd-element-card>
{% endmacro %}
