{% macro DateWithTitle(params) %}
  {% set attrs = '' %}
  {% set date = params.date
    ?? random(['01', '05', '07', '12', '13', '21', '25', '28', '30', '31'])
  %}
  {% set text = params.text ?? 'default' %}
  {% set month = params.month
    ?? random(
      [
        'Jan',
        'Feb',
        'Mar',
        'Apr',
        'May',
        'Jun',
        'Jul',
        'Aug',
        'Sep',
        'Oct',
        'Nov',
        'Dec'
      ]
    )
  %}

  {% if params.theme %}
    {% set attrs = attrs ~ 'theme="dark"' %}
  {% endif %}

  <umd-element-events-date {{ attrs }}>
    <p slot="month">
      {{ month }}
    </p>
    <p slot="day">
      {{ date }}
    </p>

    <p slot="headline">
      {% if text == 'default' %}
        <a href="https://google.com">Title Example</a>
      {% endif %}

      {% if text == 'longer' %}
        Longer Title Example
      {% endif %}

      {% if text == 'biggest' %}
        Big Big Bigger Title Example
      {% endif %}

      {% if text == 'link' %}
        <a href="https://google.com">Link Title Example</a>
      {% endif %}
    </p>
  </umd-element-events-date>
{% endmacro %}
