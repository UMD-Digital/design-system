{% macro DateWithTitle(params) %}
  {% set attrs = '' %}
  {% set date = params.date ?? '01' %}
  {% set text = params.text ?? 'default' %}

  {% if params.theme %}
    {% set attrs = attrs ~ 'theme="dark"' %}
  {% endif %}

  <umd-element-events-date {{ attrs }}>
    <p slot="month">
      Nov
    </p>
    <p slot="day">
      {{ date }}
    </p>

    <p slot="headline">
      {% if text == 'default' %}
        <a href="https://google.com">Title Example</a>
      {% endif %}

      {% if text == 'longer' %}
        Longer Title Example
      {% endif %}

      {% if text == 'biggest' %}
        Big Big Bigger Title Example
      {% endif %}

      {% if text == 'link' %}
        <a href="https://google.com">Link Title Example</a>
      {% endif %}
    </p>
  </umd-element-events-date>
{% endmacro %}
