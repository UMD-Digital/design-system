{% set link = params.link ?? 'Learn More' %}

{% macro InternalCallToAction(params) %}
  {% set attrs = '' %}

  {% if params.theme == 'dark' %}
    {% set attrs = attrs ~ 'theme="dark"' %}
  {% else %}
    {% set attrs = attrs ~ 'theme="light"' %}
  {% endif %}

  <umd-element-call-to-action slot="cta" type="secondary" {{ attrs }}>
    <a href="/"><span>{{ link }}</span></a>
  </umd-element-call-to-action>
{% endmacro %}
