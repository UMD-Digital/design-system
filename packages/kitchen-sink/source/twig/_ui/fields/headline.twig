{% macro Headline(params) %}
  {% set characters = params.characters ?? true %}
  {% set isLink = params.isLink ?? true %}
  {% set isHeader = params.isHeader ?? true %}
  {% set url = params.url ?? 'https://umd.edu' %}

  {% set string =
    'Lorem Ipsum Dolor Sit Amet Consectetur Adipiscing Elit Iacut Quis Nostrud Quamie Amet Consectetur Adipiscing Iacute Quis'
  %}

  {% if
    characters is defined and characters is not null and characters <= 120 %}
    {% set string = string|slice(0, characters) %}
  {% else %}
    {% set string = string|slice(0, 40) %}
  {% endif %}

  {% if isLink %}
    {% if isHeader %}
      <h2 slot="headline">
        <a href="{{ url }}">
          <span class="sr-only">Text for Screen Reader</span>
          <span aria-hidden="true">{{ string }}</span>
        </a>
      </h2>
    {% else %}
      <div slot="headline">
        <a href="{{ url }}">
          <span class="sr-only">Text for Screen Reader</span>
          <span aria-hidden="true">{{ string }}</span>
        </a>
      </div>
    {% endif %}
  {% endif %}

  {% if isLink == false %}
    {% if isHeader %}
      <h2 slot="headline">
        {{ string }}
      </h2>
    {% endif %}

    {% if not isHeader %}
      <div slot="headline">
        {{ string }}
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}

{% macro AlertHeadlineSuccinct() %}
  {{
    _self.Headline({
      characters: 20,
      isLink: true,
      isHeader: false
    })
  }}
{% endmacro %}

