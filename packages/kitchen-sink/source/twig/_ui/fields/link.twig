{% macro Link(params) %}
  {% set url = params.url ?? 'https://umd.edu' %}
  {% set link = params.link ?? 'CTA Link' %}

  {% set attrs = '' %}

  {% if params.theme == 'dark' %}
    {% set attrs = attrs ~ 'theme="dark"' %}
  {% else %}
    {% set attrs = attrs ~ 'theme="light"' %}
  {% endif %}

  <umd-element-call-to-action slot="link" type="secondary" {{ attrs }}>
    <a href="/"><span>{{ link }}</span></a>
  </umd-element-call-to-action>
{% endmacro %}
