{% macro RichText(params) %}
  {% set paragraphs = params.paragraphs ?? 1 %}

  {% set text =
    'Lorem ipsum dolor sit amet consectetur. Ornare enim venenatis feugiat
  facilisis eu netus urna nisl rutrum acilisi dui turpis.'
  %}

  <div slot="body">
    <p>
      {% for i in 1..paragraphs %}
        {{ text }}
      {% endfor %}
    </p>
  </div>
{% endmacro %}

{% macro RichTextSuccinct() %}
  {{
    _self.RichText({
      paragraphs: 1
    })
  }}
{% endmacro %}

{% macro RichTextNormal() %}
  {{
    _self.RichText({
      paragraphs: 2
    })
  }}
{% endmacro %}

{% macro RichTextVerbose(params) %}
  {{
    _self.RichText({
      paragraphs: 6
    })
  }}
{% endmacro %}
