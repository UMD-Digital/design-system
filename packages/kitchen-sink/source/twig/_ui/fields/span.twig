{% macro CTASpan(params) %}
  {% set characters = params.characters ?? 12 %}

  {% set string = 'View All Application Deadlines and Tuition and Aid' %}

  {% if characters is defined and characters is not null and characters <= 50 %}
    {% set string = string|slice(0, characters) %}
  {% else %}
    {% set string = string|slice(0, 12) %}
  {% endif %}

  <span>{{ string }}</span>
{% endmacro %}

{% macro CTASpanSuccinct() %}
  {{
    _self.CTASpan({
      characters: 4
    })
  }}
{% endmacro %}

{% macro CTASpanNormal() %}
  {{
    _self.CTASpan({
      characters: 12
    })
  }}
{% endmacro %}

{% macro CTASpanVerbose() %}
  {{
    _self.CTASpan({
      characters: 50
    })
  }}
{% endmacro %}
