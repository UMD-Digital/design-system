{% macro CTASpan(params) %}
  {% set characters = params.characters ?? 8 %}

  {% set string = 'Example Link Max' %}

  {% if characters is defined and characters is not null and characters <= 16 %}
    {% set string = string|slice(0, characters) %}
  {% else %}
    {% set string = string|slice(0, 8) %}
  {% endif %}

  <span>{{ string }}</span>
{% endmacro %}

{% macro CTASpanSuccinct() %}
  {{
    _self.CTASpan({
      characters: 4
    })
  }}
{% endmacro %}

{% macro CTASpanNormal() %}
  {{
    _self.CTASpan({
      characters: 8
    })
  }}
{% endmacro %}

{% macro CTASpanVerbose() %}
  {{
    _self.CTASpan({
      characters: 16
    })
  }}
{% endmacro %}
