      {{ Dropdown.ContentVariations() }}

      <div id="content-succinct" class="dropdown-selection" aria-hidden="true">
        <section>
          <h3 class="umd-sans-large default">
            Default
          </h3>

          <umd-element-alert type="alert" days="0" icon="true">
            {{ Headline.AlertHeadlineSuccinct() }}

            {{ RichText.AlertRichTextSuccinct() }}

            <a href="https://google.com" slot="cta">Learn More</a>
          </umd-element-alert>
        </section>

        <section>
          <div class="umd-sans-large type-hr">
            <span class="type">Type</span>
            <span class="type-detail">Notification</span>
          </div>

          <umd-element-alert type="notification" days="0" icon="true">
            {{ Headline.AlertHeadlineSuccinct() }}

            {{ RichText.AlertRichTextSuccinct() }}

            <a href="https://google.com" slot="cta">Learn More</a>
