          </umd-element-alert>
        </section>

        <section>
          <div class="umd-sans-large field-option-hr">
            <span class="field-option">Field Options</span>
            <span class="field-option-detail">Required Only</span>
          </div>

          <umd-element-alert type="alert" days="0" icon="true">
