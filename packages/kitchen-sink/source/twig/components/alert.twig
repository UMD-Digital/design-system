{% extends '../_layout.twig' %}
{% import '../_elements/content-dropdown.twig' as Dropdown %}
{% import '../_ui/fields/headline.twig' as Headline %}
{% import '../_ui/fields/body-slot-rich-text.twig' as RichText %}

{% block page %}
