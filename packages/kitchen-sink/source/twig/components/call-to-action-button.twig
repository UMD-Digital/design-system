{% extends '../_layout.twig' %}

{% block page %}
  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Primary Styling
      </p>

      <umd-element-call-to-action>
        <button type="button">Example Link</button>
      </umd-element-call-to-action>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Primary Styling - Long Example
      </p>

      <umd-element-call-to-action>
        <button type="button">
          A link with very long link text that causes the link to return to a
          new line
        </button>
      </umd-element-call-to-action>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Primary Styling - Icon Example
      </p>

