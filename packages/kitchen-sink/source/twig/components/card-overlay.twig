{% extends '../_layout.twig' %}

{% import '../_ui/card-overlay.twig' as CardOverlay %}

{% set var = value %}

{% block page %}
  {% set imageOne = random(RecImageOptions) %}
  {% set imageTwo = random(RecImageOptions) %}
  {% set imageThree = random(RecImageOptions) %}
  {% set imageSquare = random(SquareImageOptions) %}
  {% set imageWeird = random(WeirdImageOptions) %}

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling without images and theme options
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            theme: 'dark',
            text: 'succinct'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'light',
            text: 'normal'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'dark',
            text: 'verbose'
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with images
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            image: imageSquare,
            text: 'verbose'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageWeird,
            text: 'normal'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageThree,
            text: 'verbose'
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with CTA Icon Options
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            image: imageSquare,
            ctaOption: 'external'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            ctaOption: 'download'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'dark',
            ctaOption: 'interanl'
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with truncated content and CTA
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            image: imageSquare,
            text: 'succinct',
            eyebrow: false,
            date: false
          })
        }}

        {{
          CardOverlay.FullCardBody({
            ctaOption: 'download',
            text: 'succinct',
            eyebrow: false,
            date: false
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'dark',
            text: 'succinct',
            eyebrow: false,
            date: false
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with grid configuration animation - three column
      </p>

      <div class="umd-grid-three-animated-overlay-card my-md">
        {{
          CardOverlay.FullCardBody({
            image: imageWeird
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageTwo
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageSquare
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with grid configuration animation - four column
      </p>

      <div class="umd-grid-four-animated-overlay-card my-md">
        {{
          CardOverlay.FullCardBody({
            image: WeirdImageOptions
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageTwo
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageThree
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageSquare
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-largest">
        Layout Examples
      </p>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Layout Two Column. Default Styling
      </p>

      <div class="umd-grid my-md">
        {{
          CardOverlay.FullCardBody({
            image: imageSquare
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageWeird
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Layout Three Column. Default Styling
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            image: imageSquare
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageWeird
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageTwo
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Layout Four Column. Default Styling
      </p>

      <div class="umd-grid-four my-md">
        {{
          CardOverlay.FullCardBody({
            image: imageWeird,
            text: 'succinct'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageSquare,
            text: 'succinct'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageOne,
            text: 'succinct'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageThree
          })
        }}
      </div>
    </div>
  </section>
{% endblock %}
