{% extends '../_layout.twig' %}

{% import '../_ui/card-overlay.twig' as CardOverlay %}

{% set var = value %}

{% block page %}
  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling without images and theme options
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            theme: 'dark',
            text: 'small'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'light'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'dark'
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with images
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with CTA Icon Options
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions),
            ctaOption: 'external'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            ctaOption: 'download'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'dark',
            ctaOption: 'interanl'
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with grid configuration animation - three column
      </p>

      <div class="umd-grid-three-animated-overlay-card my-md">
        {{
          CardOverlay.FullCardBody({
            image: random(WeirdImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(RecImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with grid configuration animation - four column
      </p>

      <div class="umd-grid-four-animated-overlay-card my-md">
        {{
          CardOverlay.FullCardBody({
            image: random(WeirdImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(RecImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(RecImageOptions)
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-largest">
        Layout Examples
      </p>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Layout Two Column. Default Styling
      </p>

      <div class="umd-grid my-md">
        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(WeirdImageOptions)
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Layout Three Column. Default Styling
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(WeirdImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Layout Four Column. Default Styling
      </p>

      <div class="umd-grid-four my-md">
        {{
          CardOverlay.FullCardBody({
            image: random(WeirdImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(WeirdImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-largest">
        Overwrite Examples
      </p>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Layout Three Column. Overwrite Styling
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBodyOverwrites({
            image: random(WeirdImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBodyOverwrites({
            theme: 'dark'
          })
        }}

        {{ CardOverlay.FullCardBodyOverwrites({}) }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Layout Three Column. with CTA aligned to the bottom
      </p>

      <div class="umd-grid-three my-md">
        {{
          CardOverlay.FullCardBodyNoTextSlot({
            image: random(WeirdImageOptions)
          })
        }}

        {{
          CardOverlay.FullCardBody({
            ctaOption: 'download'
          })
        }}

        {{
          CardOverlay.FullCardBodyNoTextSlot({
            theme: 'dark'
          })
        }}
      </div>
    </div>
  </section>
{% endblock %}
