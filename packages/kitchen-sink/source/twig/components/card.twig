    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Default Styling with images
        </p>
      </div>

      <div class="umd-grid-three mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            image: random(SquareImageOptions)
          })
        }}

        {{
          Card.FullCardBody({
            image: random(RecImageOptions)
          })
        }}

        {{
          Card.FullCardBody({
            image: random(WeirdImageOptions)
