{% extends '../_layout.twig' %}

{% import '../_ui/card.twig' as Card %}

{% block page %}
  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Default Styling without images
        </p>
      </div>

      <div class="umd-grid-three mb-md" style="margin-top: 24px">
        {{ Card.FullCardBody() }}
        {{ Card.FullCardBody() }}
        {{ Card.FullCardBody() }}
      </div>
    </div>
  </section>

