{% extends '../_layout.twig' %}

{% import '../_ui/card.twig' as Card %}

{% block page %}
  {% set imageOne = random(RecImageOptions) %}
  {% set imageTwo = random(RecImageOptions) %}
  {% set imageThree = random(RecImageOptions) %}
  {% set imageSquare = random(SquareImageOptions) %}
  {% set imageWeird = random(WeirdImageOptions) %}

  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Default Styling without images
        </p>
      </div>

      <div class="umd-grid-three mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            text: 'small'
          })
        }}
        {{ Card.FullCardBody() }}
        {{ Card.FullCardBody() }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Default Styling without images and border
        </p>
      </div>

      <div class="umd-grid-three mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            border: true
          })
        }}
        {{
          Card.FullCardBody({
            border: true,
            text: 'small'
          })
        }}
        {{
          Card.FullCardBody({
            border: true
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Default Styling with images
        </p>
      </div>

      <div class="umd-grid-three mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            image: imageOne,
            text: 'small'
          })
        }}

        {{
          Card.FullCardBody({
            image: imageSquare
          })
        }}

        {{
          Card.FullCardBody({
            image: imageWeird
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Default Styling with aligned images and border
        </p>
      </div>

      <div class="umd-grid-three mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            image: imageOne,
            aligned: true,
            border: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageTwo,
            text: 'small',
            aligned: true,
            border: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageThree,
            aligned: true,
            border: true
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p>
          Default styling with dark theme
        </p>
      </div>

      <div class="umd-grid-three mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            image: imageOne,
            text: 'small',
            theme: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageThree,
            theme: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageSquare,
            theme: true
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-largest">
        Layout Examples
      </p>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Two Column (columns configured by configuration). - Default Styling
          with aligned images and border
        </p>
      </div>

      <div class="umd-grid mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            image: imageSquare,
            aligned: true,
            border: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageOne,
            aligned: true,
            border: true
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Three Column (columns configured by configuration). Default Styling
          with aligned images and border
        </p>
      </div>

      <div class="umd-grid-three mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            image: imageOne,
            date: false,
            aligned: true,
            border: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageTwo,
            aligned: true,
            border: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageThree,
            text: 'small',
            aligned: true,
            border: true
          })
        }}
      </div>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <div class="umd-rich-text">
        <p class="umd-sans-large">
          Four Column (columns configured by configuration). Default Styling
          with aligned images and border
        </p>
      </div>

      <div class="umd-grid-four mb-md" style="margin-top: 24px">
        {{
          Card.FullCardBody({
            image: imageSquare,
            date: false,
            aligned: true,
            border: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageOne,
            text: 'small',
            aligned: true,
            border: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageThree,
            eyebrow: false,
            aligned: true,
            border: true
          })
        }}

        {{
          Card.FullCardBody({
            image: imageTwo,
            aligned: true,
            border: true
          })
        }}
      </div>
    </div>
  </section>
{% endblock %}
