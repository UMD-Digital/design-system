{% extends '../_layout.twig' %}

{% import '../_ui/card-overlay.twig' as CardOverlay %}
{% import '../_ui/fields/headline.twig' as Headline %}
{% import '../_ui/fields/text-slot-rich-text.twig' as RichText %}
{% import '../_ui/fields/call-to-action.twig' as CallToAction %}

{% block page %}
  {% set imageOne = random(RecImageOptions) %}
  {% set imageTwo = random(RecImageOptions) %}
  {% set imageThree = random(RecImageOptions) %}
  {% set imageSquare = random(SquareImageOptions) %}
  {% set imageWeird = random(WeirdImageOptions) %}

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with UMD Overlay Cards
      </p>
    </div>

    <umd-element-carousel-cards>
      {{ Headline.CarouselHeadlineNormal() }}

      {{ RichText.CardRichTextNormal() }}

      {{ CallToAction.CallToAction() }}

      <div slot="cards">
        {{
          CardOverlay.FullCardBody({
            image: imageOne,
            text: 'small'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageTwo,
            text: 'small'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'dark',
            text: 'small'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageThree,
            text: 'small'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageSquare,
            text: 'small'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            theme: 'dark',
            text: 'small'
          })
        }}
      </div>
    </umd-element-carousel-cards>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling with only two UMD Cards
      </p>
    </div>

    <umd-element-carousel-cards>
      {{ Headline.CarouselHeadlineNormal() }}

      {{ RichText.CardRichTextNormal() }}

      {{ CallToAction.CallToAction() }}

      <div slot="cards">
        {{
          CardOverlay.FullCardBody({
            image: imageTwo,
            text: 'small'
          })
        }}

        {{
          CardOverlay.FullCardBody({
            image: imageOne,
            text: 'small'
          })
        }}
      </div>
    </umd-element-carousel-cards>
  </section>
{% endblock %}
