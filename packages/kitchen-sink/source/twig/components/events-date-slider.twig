{% extends '../_layout.twig' %}

{% import '../_ui/date.twig' as DateDisplay %}

{% block page %}
  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling
      </p>

      <umd-element-events-date-slider theme="light" aria-hidden="true">
        <p slot="headline" class="umd-sans-larger">
          Dates Title
        </p>
        <div>
          <a slot="link" href="https://google.com">
            <svg class="umd-cta-icon"
              width="14"
              height="14"
              viewBox="0 0 14 14"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd"
                clip-rule="evenodd"
                d="M7.7183 6.98243L2.625 1.89575H6.15621L11.306 6.93269L11.2563 6.98243L11.306 7.03218L6.15621 12.0691H2.625L7.7183 6.98243Z" />
            </svg>
            <span>CTA Link</span>
          </a>
        </div>

        <div slot="date-list">
          {{ DateDisplay.DateWithTitle() }}
          {{
            DateDisplay.DateWithTitle({
              text: 'longer'
            })
          }}
          {{ DateDisplay.DateWithTitle() }}
          {{ DateDisplay.DateWithTitle() }}
          {{
            DateDisplay.DateWithTitle({
              text: 'longer'
            })
          }}
          {{ DateDisplay.DateWithTitle() }}
          {{
            DateDisplay.DateWithTitle({
              text: 'biggest'
            })
          }}
        </div>
      </umd-element-events-date-slider>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling - Dark Theme
      </p>

      <umd-element-events-date-slider theme="dark" aria-hidden="true">
        <p slot="headline" class="umd-sans-larger">
          Dates Title
        </p>

        <a slot="link" href="https://google.com">
          <svg class="umd-cta-icon"
            width="14"
            height="14"
            viewBox="0 0 14 14"
            fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              clip-rule="evenodd"
              d="M7.7183 6.98243L2.625 1.89575H6.15621L11.306 6.93269L11.2563 6.98243L11.306 7.03218L6.15621 12.0691H2.625L7.7183 6.98243Z" />
          </svg>
          <span>CTA Link</span>
        </a>

        <div slot="date-list">
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
        </div>
      </umd-element-events-date-slider>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling - Less than 3 dates
      </p>

      <umd-element-events-date-slider theme="light" aria-hidden="true">
        <p slot="headline" class="umd-sans-larger">
          Dates Title
        </p>

        <a slot="link" href="https://google.com">
          <svg class="umd-cta-icon"
            width="14"
            height="14"
            viewBox="0 0 14 14"
            fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              clip-rule="evenodd"
              d="M7.7183 6.98243L2.625 1.89575H6.15621L11.306 6.93269L11.2563 6.98243L11.306 7.03218L6.15621 12.0691H2.625L7.7183 6.98243Z" />
          </svg>
          <span>CTA Link</span>
        </a>

        <div slot="date-list">
          {{
            DateDisplay.DateWithTitle({
              text: 'biggest'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              text: 'link'
            })
          }}
        </div>
      </umd-element-events-date-slider>
    </div>
  </section>
{% endblock %}
