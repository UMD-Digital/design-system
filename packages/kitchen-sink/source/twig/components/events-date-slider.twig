{% extends '../_layout.twig' %}

{% import '../_ui/date.twig' as DateDisplay %}
{% import '../_ui/fields/headline.twig' as Headline %}
{% import '../_ui/fields/link.twig' as Link %}

{% block page %}
  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling
      </p>

      <umd-element-events-date-slider theme="light" aria-hidden="true">
        {{ Headline.DateSliderHeadlineNormal() }}

        {{ Link.Link() }}

        <div slot="date-list">
          {{ DateDisplay.DateWithTitle() }}
          {{
            DateDisplay.DateWithTitle({
              text: 'longer',
              date: 'Sep'
            })
          }}
          {{ DateDisplay.DateWithTitle() }}
          {{ DateDisplay.DateWithTitle() }}
          {{
            DateDisplay.DateWithTitle({
              text: 'longer'
            })
          }}
          {{ DateDisplay.DateWithTitle() }}
          {{
            DateDisplay.DateWithTitle({
              text: 'biggest'
            })
          }}
        </div>
      </umd-element-events-date-slider>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling - Dark Theme
      </p>

      <umd-element-events-date-slider theme="dark" aria-hidden="true">
        {{ Headline.DateSliderHeadlineNormal() }}

        {{ Link.Link() }}

        <div slot="date-list">
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              theme: 'dark'
            })
          }}
        </div>
      </umd-element-events-date-slider>
    </div>
  </section>

  <section>
    <div class="umd-lock">
      <p class="umd-sans-large">
        Default Styling - Less than 3 dates
      </p>

      <umd-element-events-date-slider theme="light" aria-hidden="true">
        {{ Headline.DateSliderHeadlineNormal() }}

        {{ Link.Link() }}

        <div slot="date-list">
          {{
            DateDisplay.DateWithTitle({
              text: 'biggest'
            })
          }}
          {{
            DateDisplay.DateWithTitle({
              text: 'link'
            })
          }}
        </div>
      </umd-element-events-date-slider>
    </div>
  </section>
{% endblock %}
