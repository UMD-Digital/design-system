{% extends '../_layout.twig' %}

{% import '../_ui/footer.twig' as FooterOverwrites %}

{% block page %}
  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">Simple with default content</span>
      </p>
    </div>

    <umd-element-footer></umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">
          Simple with default content and styled light theme
        </span>
      </p>
    </div>

    <umd-element-footer type="simple" theme="light"></umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">
          Simple with information overwrites for contact, social, and utility
          links
        </span>
      </p>
    </div>

    <umd-element-footer type="simple">
      {{ FooterOverwrites.ContactOverwrite() }}
      {{ FooterOverwrites.SocialOverwrite() }}
      {{ FooterOverwrites.UtilityOverwrite() }}
    </umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">Mega with default content</span>
      </p>
    </div>

    <umd-element-footer type="mega"></umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">
          Mega with default content and styled light theme
        </span>
      </p>
    </div>

    <umd-element-footer type="mega" theme="light"></umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">
          Mega with information overwrites for contact, social, and utility
          links
        </span>
      </p>
    </div>

    <umd-element-footer type="mega">
      {{ FooterOverwrites.ContactOverwrite() }}
      {{ FooterOverwrites.SocialOverwrite() }}
      {{ FooterOverwrites.ColumnLinkOverwrite() }}
      {{ FooterOverwrites.UtilityOverwrite() }}
      {{ FooterOverwrites.CtaOverwrite() }}
    </umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">Visual with default content</span>
      </p>
    </div>

    <umd-element-footer type="visual"></umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">
          Visual with default content with light theme
        </span>
      </p>
    </div>

    <umd-element-footer type="visual" theme="light"></umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">
          Visual with information overwrites for contact, social, link columns,
          cta, image and utility links
        </span>
      </p>
    </div>

    <umd-element-footer type="visual">
      {{ FooterOverwrites.CtaOverwrite() }}
      {{ FooterOverwrites.ContactOverwrite() }}
      {{ FooterOverwrites.SocialOverwrite() }}
      {{ FooterOverwrites.UtilityOverwrite() }}
      {{ FooterOverwrites.ColumnLinkOverwrite() }}

      <img slot="background-image"
        src="/footer-option.jpg"
        alt="University of Maryland Logo" />
    </umd-element-footer>
  </section>

  <section>
    <div class="umd-lock">
      <p class="content-heading type-hr">
        <span class="type">Default Styling</span>
        <span class="type-detail">Visual with simiple type</span>
      </p>
    </div>

    <umd-element-footer type="simple">
      {{ FooterOverwrites.ContactOverwrite() }}
      {{ FooterOverwrites.SocialOverwrite() }}
      {{ FooterOverwrites.UtilityOverwrite() }}

      <img slot="background-image"
        src="/footer-option.jpg"
        alt="University of Maryland Logo" />
    </umd-element-footer>
  </section>
{% endblock %}
