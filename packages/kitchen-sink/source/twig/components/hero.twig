{% extends '../_layout.twig' %}

{% set image = random(RecImageOptions) %}
{% set logo = random(logoOptions) %}

{% block page %}
  <section>
    <div class="umd-lock">
      <h1 class="page-heading">
        Hero
      </h1>
    </div>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading type-hr">
          Default
        </h3>
      </div>

      <umd-element-hero>
        <img slot="image" src="{{ image }}" alt="Image Description" />

        <p slot="eyebrow">
          Eyebrow Text
        </p>
        <p slot="headline">
          <a href="">Headline Text</a>
        </p>
        <p slot="text">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
          minim veniam
        </p>

        <div slot="actions">
          <umd-element-call-to-action type="secondary" theme="dark">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-hero>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading type-hr">
          Default with Centered Text
        </h3>
      </div>

      <umd-element-hero type="default-centered">
        <img slot="image" src="{{ image }}" alt="Image Description" />

        <p slot="eyebrow">
          Eyebrow Text
        </p>
        <p slot="headline">
          <a href="">Headline Text</a>
        </p>
        <p slot="text">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
          minim veniam
        </p>

        <div slot="actions">
          <umd-element-call-to-action type="primary" theme="dark">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-hero>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading type-hr">
          Logo
        </h3>
      </div>

      <umd-element-hero type="logo" theme="light">
        <div slot="image">
          <img src="{{ logo }}"
            alt="Image Description"
            style="max-width: 600px" />
        </div>

        <p slot="eyebrow">
          Eyebrow Text
        </p>
        <p slot="headline">
          <a href="">Headline Text</a>
        </p>
        <p slot="text">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
          minim veniam
        </p>

        <div slot="actions">
          <umd-element-call-to-action type="primary" theme="dark">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-hero>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading type-hr">
          Stacked
        </h3>
      </div>

      <umd-element-hero type="stacked">
        <img src="{{ image }}" alt="Image Description" slot="image" />

        <p slot="eyebrow">
          Eyebrow Text
        </p>
        <p slot="headline">
          What Does it take to change the world
        </p>
        <p slot="text">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
          minim veniam
        </p>

        <div slot="actions">
          <umd-element-call-to-action type="primary" theme="dark">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-hero>
    </section>
  </section>
{% endblock %}
