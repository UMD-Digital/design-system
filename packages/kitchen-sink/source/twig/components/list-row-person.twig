{% extends '../_layout.twig' %}

{% set image = random(RecImageOptions) %}
{% set logo = random(logoOptions) %}

{% block page %}
  <section>
    <div class="umd-lock">
      <h1 class="page-heading">
        List Row Person
      </h1>
    </div>

    <section>
      <div class="umd-lock-smallest">
        <h3 class="content-heading type-hr">
          <span>Type Person</span>
        </h3>

        <umd-element-list-row type="person">
          <img slot="image"
            src="https://election.umd-staging.com/uploads/images/election/janelle-wong.jpeg"
            alt="Image Description" />

          <p slot="headline">
            Janelle Wong
          </p>
          <p slot="text">
            <span>
              Professor of American Studies and Government and Politics
            </span>
            <br />
            <span>College of Arts and Humanities</span>
          </p>
          <p slot="sub-text">
            Specialty topic, specialty topic
          </p>
        </umd-element-list-row>
        <umd-element-list-row type="person">
          <img slot="image"
            src="https://election.umd-staging.com/uploads/images/election/Baldwin-Melinda.jpg"
            alt="Image Description" />

          <p slot="headline">
            Melinda Baldwin
          </p>
          <p slot="text">
            <span>Associate Professor, History</span>
            <br />
            <span>College of Arts and Humanities</span>
          </p>
          <p slot="sub-text">
            Specialty topic, specialty topic
          </p>
        </umd-element-list-row>
      </div>
    </section>
  </section>
{% endblock %}
