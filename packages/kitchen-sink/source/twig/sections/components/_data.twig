{% macro GetUrl() %}
  {% set URL = '/sections/components/' %}
  {{ URL }}
{% endmacro %}

{% macro DisplayName() %}
  {% for item in list %}
    {{ item.name }}
  {% endfor %}
{% endmacro %}

{% macro HeaderLinks() %}
  <ul>
    {% for item in list %}
      <li><a href="{{ _self.GetUrl ~ item.link }}">{{ item.name }}</a></li>
    {% endfor %}
  </ul>
{% endmacro %}

{% macro Links() %}
  {% for item in list %}
    <a href="{{ _self.GetUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in BlockPages %}
    <a href="{{ _self.GetUrl ~ 'blocks/' ~ item.link }}">{{ item.name }}</a>
  {% endfor %}

  {% for item in ListPages %}
    <a href="{{ _self.GetUrl ~ 'lists/' ~ item.link }}">{{ item.name }}</a>
  {% endfor %}

  {% for item in NavigationPages %}
    <a href="{{ _self.GetUrl ~ 'lists/' ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}
