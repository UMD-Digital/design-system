{% set list = [
  {
    name: 'Accessories',
    link: 'accessories/index'
  },
  {
    name: 'Atomic',
    link: 'atomic/index'
  },
  {
    name: 'Blocks',
    link: 'blocks/index'
  },
  {
    name: 'Carousels',
    link: 'carousels/index'
  },
  {
    name: 'Footer',
    link: 'footer/index'
  },
  {
    name: 'Heros',
    link: 'heros/index'
  },
  {
    name: 'Layout',
    link: 'layout/index'
  },
  {
    name: 'Lists',
    link: 'lists/index'
  },
  {
    name: 'Media',
    link: 'media/index'
  },
  {
    name: 'Navigation',
    link: 'navigation/index'
  },
  {
    name: 'Pathway',
    link: 'pathways/index'
  },
  {
    name: 'Person',
    link: 'person'
  },
  {
    name: 'Sliders',
    link: 'sliders/index'
  }
] %}

{% macro GetUrl() %}
  {% set URL = '/sections/components/' %}
  {{ URL }}
{% endmacro %}

{% macro DisplayName() %}
  {% for item in list %}
    {{ item.name }}
  {% endfor %}
{% endmacro %}

{% macro HeaderLinks() %}
  <ul>
    {% for item in list %}
      <li><a href="{{ _self.GetUrl ~ item.link }}">{{ item.name }}</a></li>
    {% endfor %}
  </ul>
{% endmacro %}

{% macro Links() %}
  {% for item in list %}
    <a href="{{ _self.GetUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}
