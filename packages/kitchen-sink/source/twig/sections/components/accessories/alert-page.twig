{% extends '_layout.twig' %}

{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <section style="padding-bottom: 10vh;">
    <div class="umd-lock">
      <h1 class="page-heading component-title">
        Alert Page
      </h1>

      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariationsJs() }}
    </div>

    <section>
      <div class="umd-lock-smaller">
        <h3 class="content-heading">
          Page Alert
        </h3>
        {{ macros.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock-smaller">
        <div class="content-heading">
          <span>Page Alert</span>
          <span>Required Only, headline only text, and no icon</span>
        </div>

        <umd-element-alert-page icon="false">
          <h2 slot="headline">
            Loading Example Headline Data
          </h2>
        </umd-element-alert-page>
      </div>
    </section>
  </section>
{% endmacro %}

{% macro example() %}
  <umd-element-alert-page icon="true">
    <h2 slot="headline">
      <a href="">Lorem Ipsum Dolor Sit Amet Con</a>
    </h2>

    <div slot="body" class="umd-rich-text">
      <p>
        Lorem Ipsum Consectetur Elit Duis reprehen. Lorem Ipsum Dolor Sit
        Excepteur occaecat, voluptate Adipiscing Elit.

        Lorem Ipsum Consectetur Adipis Excepteur occaecat Adipiscing Elit Lorem
        Ipsum Consectetur.
      </p>
    </div>

    <umd-element-call-to-action slot="actions" type="primary">
      <a href="/"><span>Learn More</span></a>
    </umd-element-call-to-action>
  </umd-element-alert-page>
{% endmacro %}
