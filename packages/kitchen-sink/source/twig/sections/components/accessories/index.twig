{% extends '_layout.twig' %}

{% import _self as macros %}

{% set AccessoryPages = [
  {
    name: 'Accordion',
    link: 'accordion'
  },
  {
    name: 'Alert',
    link: 'alert'
  },
  {
    name: 'Quote',
    link: 'quote'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'accessories/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in AccessoryPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Accessory Elements
      </h1>

      <p>
        Additonal Component Examples:
      </p>

      <ul>
        {% for item in AccessoryPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Accordion</span>
          <a href="{{ _self.GetChildUrl() }}accordion">View More Examples</a>
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Alert</span>
          <a href="{{ _self.GetChildUrl() }}alert">View More Examples</a>
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Quote</span>
          <a href="{{ _self.GetChildUrl() }}quote">View More Examples</a>
        </div>
      </div>
    </section>
  </div>
{% endmacro %}
