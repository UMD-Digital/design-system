{% extends '_layout.twig' %}

{% import './accordion.twig' as Accordion %}
{% import './alert-page.twig' as AlertPage %}
{% import './alert-site.twig' as AlertSite %}
{% import './quote-simple.twig' as QuoteSimple %}
{% import './quote-featured.twig' as QuoteFeatured %}
{% import _self as macros %}

{% set AccessoryPages = [
  {
    name: 'Accordion',
    link: 'accordion'
  },
  {
    name: 'Alert Page',
    link: 'alert-page'
  },
  {
    name: 'Alert Site',
    link: 'alert-site'
  },
  {
    name: 'Quote Simple',
    link: 'quote-simple'
  },
  {
    name: 'Quote Featured',
    link: 'quote-featured'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'accessories/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in AccessoryPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Accessory Elements
      </h1>

      <p>
        Additonal Component Examples:
      </p>

      <ul>
        {% for item in AccessoryPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Accordion</span>
          <a href="{{ _self.GetChildUrl() }}accordion">View More Examples</a>
        </div>

        {{ Accordion.exampleOpen() }}
        {{ Accordion.exampleClosed() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Alert Page</span>
          <a href="{{ _self.GetChildUrl() }}alert-page">View More Examples</a>
        </div>

        {{ AlertPage.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Alert Site</span>
          <a href="{{ _self.GetChildUrl() }}alert-site">View More Examples</a>
        </div>
      </div>

      {{ AlertSite.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Quote Featured</span>
          <a href="{{ _self.GetChildUrl() }}quote-featured">
            View More Examples
          </a>
        </div>

        {{ QuoteFeatured.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Quote Simple</span>
          <a href="{{ _self.GetChildUrl() }}quote-simple">View More Examples</a>
        </div>

        {{ QuoteSimple.example() }}
      </div>
    </section>
  </div>
{% endmacro %}
