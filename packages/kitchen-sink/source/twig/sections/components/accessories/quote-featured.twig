    <div class="umd-lock-small">
      <h1 class="page-heading">
        Quote Featured
      </h1>
    </div>

    <section>
      <div class="umd-lock-small">
        <h3 class="content-heading" style="margin-bottom: 40px">
          <span>Featured</span>
          <span>No Image</span>
