{% extends '../../_layout.twig' %}
{% import '../../_includes/content-dropdown.twig' as Dropdown %}
{% import '../../_includes/macros/card-overlay.twig' as CardOverlay %}
{% import '../../_includes/macros/fields/headline.twig' as Headline %}
{% import '../../_includes/macros/fields/body-slot-rich-text.twig'
  as RichText
%}

{% block page %}
  <section>
    <div class="umd-lock">
      <h1 class="page-heading">
        Accordion
      </h1>

      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariations() }}
    </div>
  </section>

  <div id="content-normal" class="dropdown-selection" aria-hidden="false">
    <section>
      <div class="umd-lock">
        <p class="content-heading type-hr">
          Light Variant (First Item Default Open)
        </p>

        <umd-element-accordion>
          <umd-element-accordion-item class="mb-xs" state="open" resize>
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextSuccinct() }}
          </umd-element-accordion-item>
          <umd-element-accordion-item class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextNormal() }}
          </umd-element-accordion-item>
          <umd-element-accordion-item class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextVerbose() }}
          </umd-element-accordion-item>
        </umd-element-accordion>

        <p class="content-heading type-hr">
          Light Variant (Default Closed)
        </p>

        <umd-element-accordion>
          <umd-element-accordion-item class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextSuccinct() }}
          </umd-element-accordion-item>
          <umd-element-accordion-item class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextNormal() }}
          </umd-element-accordion-item>
          <umd-element-accordion-item class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextVerbose() }}
          </umd-element-accordion-item>
        </umd-element-accordion>

        <p class="content-heading type-hr">
          Dark Variant (First Item Default Open)
        </p>

        <umd-element-accordion>
          <umd-element-accordion-item class="mb-xs"
            theme="dark"
            state="open"
            resize>
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextSuccinct() }}
          </umd-element-accordion-item>
          <umd-element-accordion-item theme="dark" class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextNormal() }}
          </umd-element-accordion-item>
          <umd-element-accordion-item theme="dark" class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextVerbose() }}
          </umd-element-accordion-item>
        </umd-element-accordion>

        <p class="content-heading type-hr">
          Dark Variant (Default Closed)
        </p>

        <umd-element-accordion>
          <umd-element-accordion-item class="mb-xs" theme="dark">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextSuccinct() }}
          </umd-element-accordion-item>
          <umd-element-accordion-item theme="dark" class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextNormal() }}
          </umd-element-accordion-item>
          <umd-element-accordion-item theme="dark" class="mb-xs">
            {{ Headline.AccordionHeadlineNormal() }}
            {{ RichText.AccordionRichTextVerbose() }}
          </umd-element-accordion-item>
        </umd-element-accordion>
      </div>
    </section>
  </div>

