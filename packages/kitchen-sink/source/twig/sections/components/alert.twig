{% extends '../../_layout.twig' %}
{% import '../../_includes/content-dropdown.twig' as Dropdown %}
{% import '../../_includes/macros/fields/headline.twig' as Headline %}
{% import '../../_includes/macros/fields/body-slot-rich-text.twig'
  as RichText
%}

{% block page %}
  <section style="padding-bottom: 10vh;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Alert Options
      </h1>

      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariations() }}
    </div>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading type-hr">
          <span>Alert Site</span>
        </h3>
      </div>

      <umd-element-alert-site>
        {{ Headline.AlertHeadlineVerbose() }}
        {{ RichText.AlertRichTextVerbose() }}

        <umd-element-call-to-action slot="actions" type="primary">
          <a href="/"><span>Donate Now</span></a>
        </umd-element-call-to-action>
      </umd-element-alert-site>
    </section>

    <div id="content-succinct" class="dropdown-selection" aria-hidden="true">
      <section>
        <div class="umd-lock">
          <h3 class="content-heading type-hr">
            <span>Page Alert</span>
          </h3>

          <umd-element-alert-page icon="true">
            {{ Headline.AlertHeadlineSuccinct() }}
            {{ RichText.AlertRichTextSuccinct() }}

            <umd-element-call-to-action slot="actions" type="primary">
              <a href="/"><span>Learn More</span></a>
            </umd-element-call-to-action>
          </umd-element-alert-page>
        </div>
      </section>

      <section>
        <div class="umd-lock">
          <div class="content-heading type-hr">
            <span>Page Alert</span>
            <span>Required Only and No Icon</span>
          </div>

          <umd-element-alert-page icon="false">
            {{ Headline.AlertHeadlineSuccinct() }}
          </umd-element-alert-page>
        </div>
      </section>
    </div>

    <div id="content-normal" class="dropdown-selection" aria-hidden="false">
      <section>
        <div class="umd-lock">
          <h3 class="content-heading type-hr">
            <span>Page Alert</span>
          </h3>

          <umd-element-alert-page icon="true">
            {{ Headline.AlertHeadlineNormal() }}
            {{ RichText.AlertRichTextNormal() }}

            <umd-element-call-to-action slot="actions" type="primary">
              <a href="/"><span>Learn More</span></a>
            </umd-element-call-to-action>
          </umd-element-alert-page>
        </div>
      </section>

      <section>
        <div class="umd-lock">
          <div class="content-heading type-hr">
            <span>Page Alert</span>
            <span>Required Only and No Icon</span>
          </div>

          <umd-element-alert-page icon="false">
            {{ Headline.AlertHeadlineNormal() }}
          </umd-element-alert-page>
        </div>
      </section>
    </div>

    <div id="content-verbose" class="dropdown-selection" aria-hidden="true">
      <section>
        <div class="umd-lock">
          <h3 class="content-heading type-hr">
            <span>Page Alert</span>
          </h3>

          <umd-element-alert-page icon="true">
            {{ Headline.AlertHeadlineVerbose() }}
            {{ RichText.AlertRichTextVerbose() }}

            <umd-element-call-to-action slot="actions" type="primary">
              <a href="/"><span>Learn More</span></a>
            </umd-element-call-to-action>
          </umd-element-alert-page>
        </div>
      </section>

      <section>
        <div class="umd-lock">
          <div class="content-heading type-hr">
            <span>Page Alert</span>
            <span>Required Only and No Icon</span>
          </div>

          <umd-element-alert-page icon="false">
            {{ Headline.AlertHeadlineVerbose() }}
          </umd-element-alert-page>
        </div>
      </section>
    </div>
  </section>
{% endblock %}
