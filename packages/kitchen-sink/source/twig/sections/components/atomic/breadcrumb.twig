{% extends '_layout.twig' %}

{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <section>
    <div class="umd-lock">
      <h1 class="page-heading component-title">
        Breadcrumb
      </h1>

      <p class="content-heading">
        <span>Theme Light</span>
        <span>Primary Styling</span>
      </p>

      {{ macros.displayWithOptions() }}
    </div>
  </section>

  <section style="background-color: black; padding: 40px 0;">
    <div class="umd-lock">
      <p class="content-heading" style="color: white">
        <span>Theme Dark</span>
        <span>Primary Styling</span>
      </p>
      {{
        macros.displayWithOptions({
          theme: 'dark'
        })
      }}
    </div>
  </section>
{% endmacro %}

{% macro displayWithOptions(params) %}
  {% set theme = params.theme ?? null %}

  <umd-element-breadcrumb theme="{{ theme }}">
    <div slot="paths">
      <a href="">Home</a>
      <a href="">Primary Link</a>
      <a href="">Secondary Link</a>
      <a href="">Tertiary Link</a>
      <a href="">Current Page</a>
    </div>
  </umd-element-breadcrumb>
{% endmacro %}
