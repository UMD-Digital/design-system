{% extends '_layout.twig' %}

{% import _self as macros %}

{% block page %}
  <section>
    <div class="umd-lock">
      <p class="content-heading">
        <span>Theme Light</span>
        <span>Primary Styling</span>
      </p>

      {{ macros.example() }}
    </div>
  </section>

  <section style="background-color: black; padding: 40px 0;">
    <div class="umd-lock">
      <p class="content-heading" style="color: white">
        <span>Theme Dark</span>
        <span>Primary Styling</span>
      </p>
      <umd-element-breadcrumb class="mb-xs" theme="dark">
        <div slot="paths">
          <a href="">Home</a>
          <a href="">Primary Link</a>
          <a href="">Secondary Link</a>
          <a href="">Tertiary Link</a>
          <a href="">Current Page</a>
        </div>
      </umd-element-breadcrumb>
    </div>
  </section>
{% endblock %}

{% macro example() %}
  <umd-element-breadcrumb class="mb-xs">
    <div slot="paths">
      <a href="">Home</a>
      <a href="">Primary Link</a>
      <a href="">Secondary Link</a>
      <a href="">Tertiary Link</a>
      <a href="">Current Page</a>
    </div>
  </umd-element-breadcrumb>
{% endmacro %}
