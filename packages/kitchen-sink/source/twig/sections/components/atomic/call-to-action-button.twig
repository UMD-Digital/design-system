{% macro primary() %}
  {{ CallToActionOption.NormalCTA() }}
{% endmacro %}

{% macro outline() %}
  {{
    CallToActionOption.NormalCTA({
      ctaType: 'outline',
      ctaOption: 'chevron'
    })
  }}
{% endmacro %}

{% macro secondary() %}
  {{
    CallToActionOption.NormalCTA({
      ctaType: 'secondary',
      ctaOption: 'chevron'
    })
  }}
{% endmacro %}

{% macro examplegrouped() %}
  <div class="umd-grid-gap-three" style="margin-top: 24px">
    <div>
      {{ macros.primary() }}
    </div>

    <div>
      {{ macros.outline() }}
    </div>

    <div>
      {{ macros.secondary() }}
    </div>
  </div>
{% endmacro %}
