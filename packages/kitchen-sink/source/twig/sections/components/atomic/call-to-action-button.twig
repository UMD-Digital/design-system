{% extends '_layout.twig' %}

{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import './call-to-action.twig' as CallToActionOption %}
{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <section>
      <div class="umd-lock">
        <h1 class="page-heading component-title">
          Call to Action (Button)
        </h1>

        <h2 class="content-heading">
          Content Variations
        </h2>

        {{ Dropdown.ContentVariations() }}
      </div>
    </section>
    <div id="succinct" class="dropdown-selection" aria-hidden="true">
      <section>
        <div class="umd-lock">
          <p class="content-heading">
            Primary Styling
          </p>
          {{
            CallToActionOption.SuccinctCTA({
              ctaSpan: true,
              ctaLink: false,
              externalLink: false,
              button: true
            })
          }}
        </div>
      </section>

      <section>
        <div class="umd-lock">
          <p class="content-heading">
            <span>Primary Styling</span>
            <span>Icon Example</span>
          </p>

          <div class="cta-layout">
            {{
              CallToActionOption.SuccinctCTA({
                primary: true,
                large: false,
                ctaOption: 'arrow',
                button: true
              })
            }}
          </div>
        </div>
      </section>

      <section>
        <div class="umd-lock">
          <p class="content-heading">
            <span>Primary Styling</span>
            <span>Sized Large</span>
          </p>

          {{
