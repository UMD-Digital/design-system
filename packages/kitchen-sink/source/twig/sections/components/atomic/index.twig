{% extends '_layout.twig' %}

{% import './breadcrumb.twig' as Breadcrumb %}
{% import './call-to-action.twig' as CallToAction %}
{% import './call-to-action-button.twig' as CallToActionButton %}
{% import './logo.twig' as Logo %}
{% import './stat.twig' as Stat %}
{% import _self as macros %}

{% set AtomicPages = [
  {
    name: 'Breadcrumb',
    link: 'breadcrumb'
  },
  {
    name: 'Call To Action',
    link: 'call-to-action'
  },
  {
    name: 'Call To Action (button)',
    link: 'call-to-action-button'
  },
  {
    name: 'Logo',
    link: 'logo'
  },
  {
    name: 'Stat',
    link: 'stat'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'atomic/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in AtomicPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Atomic Elements
      </h1>

      <p>
        Small reusable components
      </p>

      <p>
        Additonal Component Examples:
      </p>

      <ul>
        {% for item in AtomicPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Breadcrumb</span>
          <a href="{{ _self.GetChildUrl() }}breadcrumb">View More Examples</a>
        </div>
        {{ Breadcrumb.displayWithOptions() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Call To Actions</span>
          <a href="{{ _self.GetChildUrl() }}call-to-action">
            View More Examples
          </a>
        </div>
        {{ CallToAction.examplegrouped() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Call To Actions (Button)</span>
          <a href="{{ _self.GetChildUrl() }}call-to-action-button">
            View More Examples
          </a>
        </div>
        {{ CallToActionButton.examplegrouped() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Logo</span>
          <a href="{{ _self.GetChildUrl() }}logo">View More Examples</a>
        </div>
        <div class="umd-grid-gap-three">
          {{ Logo.displayWithOptions() }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Stat</span>
          <a href="{{ _self.GetChildUrl() }}stat">View More Examples</a>
        </div>

        {{ Stat.displayWithOptions() }}
      </div>
    </section>
  </div>
{% endmacro %}
