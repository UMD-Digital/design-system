{% extends '_layout.twig' %}

{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <section>
      <div class="umd-lock">
        <h1 class="page-heading component-title">
          Logo
        </h1>

        <p class="content-heading">
          <span>Logo</span>
          <span>Default</span>
        </p>
        {{
          macros.displayWithOptions({
            border: false
          })
        }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <p class="content-heading">
          <span>Logo</span>
          <span>With Border</span>
        </p>
        <div class="umd-grid-gap-three">
          {{ macros.displayWithOptions() }}
        </div>
      </div>
    </section>

    <section style="background-color: black; padding: 40px 0;">
      <div class="umd-lock">
        <p class="content-heading" style="color: white">
          <span>Logo</span>
          <span>Theme Dark</span>
        </p>

        <div class="umd-grid-gap-three">
          {{
            macros.displayWithOptions({
              theme: 'dark'
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <p class="content-heading">
          <span>Logo</span>
          <span>Layout Example</span>
        </p>

        <div class="umd-grid-gap-three">
          {{ macros.displayWithOptions() }}
          {{
            macros.displayWithOptions({
              type: 'rightNow'
            })
          }}
          {{
            macros.displayWithOptions({
              type: 'theShell'
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <p class="content-heading">
          <span>Logo</span>
          <span>Layout Example with max width on site layer</span>
        </p>

        <div style="max-width: 800px; margin: 0 auto;">
          <div class="umd-grid-gap-three">
            {{ macros.displayWithOptions() }}
            {{
              macros.displayWithOptions({
                type: 'rightNow'
              })
            }}
            {{
              macros.displayWithOptions({
                type: 'theShell'
              })
            }}
          </div>
        </div>
      </div>
    </section>
  </div>
{% endmacro %}

{% macro displayWithOptions(params) %}
  {% set border = params.border ?? true %}
  {% set theme = params.theme ?? null %}
  {% set type = params.type ?? 'today' %}
  {% set imageSrc = params.imageSrc ?? '/terp/marylandtoday.svg' %}

  {% if type == 'today' %}
    {% set imageSrc = '/terp/marylandtoday.svg' %}
  {% endif %}

  {% if type == 'rightNow' %}
    {% set imageSrc = '/terp/logo-right-now.jpg' %}
  {% endif %}

  {% if type == 'theShell' %}
    {% set imageSrc = '/terp/logo-shell.jpg' %}
  {% endif %}

  <umd-element-logo border="{{ border }}" theme="{{ theme }}">
    <img src="{{ imageSrc }}" alt="Logo" slot="image" />
  </umd-element-logo>
{% endmacro %}
