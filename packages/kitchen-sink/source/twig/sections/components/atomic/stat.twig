{% extends '_layout.twig' %}

{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <section>
    <div class="umd-lock">
      <h1 class="page-heading component-title">
        Stat
      </h1>
    </div>

    <section>
      <div class="umd-lock-smallest">
        <h3 class="content-heading">
          Default
        </h3>

        {{ macros.displayWithOptions() }}
      </div>
    </section>

    <section style="background-color: black; padding: 50px 0;">
      <div class="umd-lock-smallest">
        <h3 class="content-heading">
          <span style="color: white">Default</span>
          <span>Theme Dark</span>
        </h3>

        {{
          macros.displayWithOptions({
            theme: 'dark'
          })
        }}
      </div>
    </section>

    <section>
      <div class="umd-lock-smallest">
        <h3 class="content-heading">
          Size Large
        </h3>

        {{
          macros.displayWithOptions({
            size: 'large'
          })
        }}
      </div>
    </section>

    <section style="background-color: black; padding: 50px 0;">
      <div class="umd-lock-smallest">
        <h3 class="content-heading">
          <span style="color: white">Size Large</span>
          <span>Theme Dark</span>
        </h3>

        {{
          macros.displayWithOptions({
            theme: 'dark',
            size: 'large'
          })
        }}
      </div>
    </section>

    <section>
      <div class="umd-lock-smallest">
        <h3 class="content-heading">
          <span>Size Large</span>
          <span>With Line</span>
        </h3>

        {{
          macros.displayWithOptions({
            size: 'large',
            line: true
          })
        }}
      </div>
    </section>

    <section style="background-color: black; padding: 50px 0;">
      <div class="umd-lock-smallest">
        <h3 class="content-heading">
          <span style="color: white">Size Large With Line</span>
          <span>Theme Dark</span>
        </h3>

        {{
          macros.displayWithOptions({
            theme: 'dark',
            size: 'large',
            line: true
          })
        }}
      </div>
    </section>

    <section style="padding-bottom: 10vh">
      <div class="umd-lock-smallest">
        <h3 class="content-heading">
          <span>Default</span>
          <span>Long Text</span>
        </h3>
        {{
          macros.displayWithOptions({
            stat: 'Long Titled'
          })
        }}
      </div>
    </section>
  </section>
{% endmacro %}

{% macro displayWithOptions(params) %}
  {% set hasRichText = params.text ?? true %}
  {% set theme = params.theme ?? null %}
  {% set size = params.size ?? null %}
  {% set hasLine = params.line ?? null %}
  {% set hasStat = params.stat ?? '10th' %}
  {% set hasSubText = params.subText
    ?? 'Source: 2022-23 U.S. News & World Report'
  %}

  {% if hasLine == true %}
    {% set line = 'has-line' %}
  {% else %}
    {% set line = '' %}
  {% endif %}

  <umd-element-stat theme="{{ theme }}" size="{{ size }}" {{ line }}>
    {% if hasStat %}
      <div slot="stat">
        {{ hasStat }}
      </div>
    {% endif %}

    {% if hasRichText %}
      <div slot="text">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
        tempor incididunt ut
      </div>
    {% endif %}

    {% if hasSubText %}
      <div slot="sub-text">
        {{ hasSubText }}
      </div>
    {% endif %}
  </umd-element-stat>
{% endmacro %}
