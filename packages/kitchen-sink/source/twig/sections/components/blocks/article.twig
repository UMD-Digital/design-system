{% extends '_layout.twig' %}
{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import _self as macros %}

{% set url = params.url ?? 'https://umd.edu' %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Article
      </h1>

      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariationsJs() }}
    </div>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default
        </h3>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            macros.content({
              image: true,
              date: true
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Type</span>
          <span>Outlined</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            macros.content({
              image: true,
              aligned: true,
              border: true,
              date: true
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Layout</span>
          <span>Aligned</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
