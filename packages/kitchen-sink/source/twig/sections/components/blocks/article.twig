        <div class="content-heading">
          <span>Theme</span>
          <span>Dark</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            macros.content({
              image: true,
              aligned: true,
              theme: 'dark'
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Layout</span>
          <span>Grouping (3)</span>
        </div>
        <div class="umd-grid-gap-three mb-md" style="margin-top: 24px">
          {{
            macros.content({
              image: true,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
          {{
