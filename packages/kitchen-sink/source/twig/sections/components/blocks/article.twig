{% extends '_layout.twig' %}
{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import '_includes/macros/article.twig' as Article %}

{% block page %}
  {% set imageOne = random(RecImageOptions) %}
  {% set imageTwo = random(RecImageOptions) %}
  {% set imageThree = random(RecImageOptions) %}
  {% set imageSquare = random(SquareImageOptions) %}
  {% set imageWeird = random(WeirdImageOptions) %}

  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Article
      </h1>

      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariationsJs() }}
    </div>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default
        </h3>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageSquare,
              date: true
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Type</span>
          <span>Outlined</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageOne,
              aligned: true,
              border: true,
              date: true
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Layout</span>
          <span>Aligned</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageOne,
              date: true,
              aligned: true,
              border: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Field Options</span>
          <span>Required Only</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              date: true,
              aligned: false,
              border: false,
              eyebrow: false,
              ctaLink: false,
              text: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Field Options</span>
          <span>Minimal</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageOne,
              date: true,
              aligned: true,
              border: false,
              eyebrow: false,
              ctaLink: false,
              text: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Theme</span>
          <span>Dark</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageOne,
              aligned: true,
              theme: 'dark'
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Layout</span>
          <span>Grouping (3)</span>
        </div>
        <div class="umd-grid-gap-three mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageOne,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
          {{
            Article.NormalCardBody({
              image: imageTwo,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
          {{
            Article.NormalCardBody({
              image: imageThree,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Layout</span>
          <span>Grouping (4)</span>
        </div>
        <div class="umd-grid-gap-four mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageOne,
              aligned: true,
              border: false
            })
          }}
          {{
            Article.NormalCardBody({
              image: imageTwo,
              aligned: true,
              border: false
            })
          }}
          {{
            Article.NormalCardBody({
              image: imageThree,
              aligned: true,
              border: false
            })
          }}
          {{
            Article.NormalCardBody({
              image: imageWeird,
              aligned: true,
              border: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Layout</span>
          <span>Grouping (2)</span>
        </div>
        <div class="umd-grid-gap mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageOne,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
          {{
            Article.NormalCardBody({
              image: imageTwo,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
        </div>
      </div>
    </section>
  </div>
{% endblock %}
