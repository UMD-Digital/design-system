      <h1 class="page-heading component-title">
        Overlay Card
      </h1>

      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariationsJs() }}
    </div>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default
        </h3>
        <div class="umd-grid-gap-three">
          {{
            macros.displayWithOptions({
              date: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Field Options</span>
          <span>Required Only</span>
        </div>
        <div class="umd-grid-gap-three">
          {{
            macros.displayWithOptions({
              date: false,
              text: false,
              eyebrow: false,
              ctaLink: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
