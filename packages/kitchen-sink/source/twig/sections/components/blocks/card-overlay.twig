              sizeBig: true
            })
          }}

          {{
            macros.displayWithOptions({
              sizeBig: true
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Layout</span>
          <span>Grid Configuration Animation Grouping (4)</span>
        </div>

        <div class="umd-grid-four">
          {{
            macros.displayWithOptions({
              sizeBig: true
            })
          }}

          {{
