{% extends '_layout.twig' %}
{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <div style="padding: 50px 0;">
    <section>
      <div class="umd-lock">
        <h1 class="page-heading component-title">
          Event Featured
        </h1>
      </div>

      <section>
        <div class="umd-lock">
          <h3 class="content-heading">
            Display Featured
          </h3>
          <div style="margin-top: 24px">
            {{ macros.displayWithOptions() }}
          </div>
        </div>
      </section>

      <section>
        <div class="umd-lock">
          <h3 class="content-heading">
            <span>Display Featured</span>
            <span>Multi Days</span>
          </h3>
          <div style="margin-top: 24px">
            {{
              macros.displayWithOptions({
                multiDay: true
              })
            }}
          </div>
        </div>
      </section>

      <section style="padding: 50px 0; background-color: black;">
        <div class="umd-lock">
          <h3 class="content-heading">
            <span style="color: white">Display Featured</span>
            <span style="color: white">Theme Dark</span>
          </h3>
          <div style="margin-top: 24px">
            {{
              macros.displayWithOptions({
                theme: 'dark'
              })
            }}
          </div>
        </div>
      </section>
    </section>
  </div>
{% endmacro %}

{% macro displayWithOptions(params) %}
  {% set hasImage = params.image ?? true %}
  {% set hasHeadline = params.headline ?? true %}
  {% set isMultiDay = params.multiDay ?? false %}
  {% set hasCtaLink = params.ctaLink ?? true %}
  {% set hasRichText = params.text ?? true %}
  {% set hasLocation = params.location ?? true %}

  {% set attrs = '' %}

  {% set attrs = attrs ~ 'theme="' ~ params.theme ~ '"' %}

  <umd-element-event display="feature" {{ attrs }}>
    {% if hasImage %}
      <a slot="image" href="https://umd.edu" target="_blank">
        <img src="https://optimise2.assets-servd.host/umd-calendar/production/placeholders/placeholder-2.jpg?w=1920&h=1080&auto=compress%2Cformat&fit=crop&dm=1658178350&s=ac382dd343b5fa928647cfd0542dad28"
          alt="Example Alt Text" />
      </a>
    {% endif %}

    {% if hasHeadline %}
      <h2 slot="headline">
        <a href="https://umd.edu">
          The 47th Annual Maryland Leadership Conference
        </a>
      </h2>
    {% endif %}

    {% if hasRichText %}
      <div slot="text">
        <p>
          The 47th Annual Maryland Leadership Conference is a FREE, half-day
          experience that is open to all UMD students.
        </p>
      </div>
    {% endif %}

    <div slot="start-date-iso">
      2024-04-12T12:00:00.000Z
    </div>

    {% if isMultiDay %}
      <div slot="end-date-iso">
        2024-04-13T17:30:00.000Z
      </div>
    {% else %}
      <div slot="end-date-iso">
        2024-04-12T17:30:00.000Z
      </div>
    {% endif %}

    {% if hasLocation %}
      <div slot="location">
        Adele H. Stamp Student Union
      </div>
    {% endif %}

    {% if hasCtaLink %}
      <umd-element-call-to-action slot="actions" type="secondary" {{ attrs }}>
        <a href="/"><span>Learn More</span></a>
      </umd-element-call-to-action>
    {% endif %}
  </umd-element-event>
{% endmacro %}
