{% extends '_layout.twig' %}
{% import '_includes/macros/article.twig' as Article %}
{% import '_includes/macros/card.twig' as Card %}
{% import '_includes/macros/card-overlay.twig' as CardOverlay %}
{% import '../_data.twig' as Data %}

{% block page %}
  {% set imageOne = random(RecImageOptions) %}
  {% set imageTwo = random(RecImageOptions) %}
  {% set imageThree = random(RecImageOptions) %}

  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Display Type Block
      </h1>

      <p>
        Uses the small text lockup styles.
      </p>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Article</span>
          <a href="{{ Data.GetUrl() }}blocks/article">View More Examples</a>
        </div>
        <div class="umd-grid-gap-three mb-md" style="margin-top: 24px">
          {{
            Article.NormalCardBody({
              image: imageOne,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
          {{
            Article.NormalCardBody({
              image: imageTwo,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
          {{
            Article.NormalCardBody({
              image: imageThree,
              aligned: true,
              border: false,
              date: true,
              ctaLink: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Card</span>
          <a href="{{ Data.GetUrl() }}blocks/card">View More Examples</a>
        </div>
        <div class="umd-grid-gap-three mb-md">
          {{
            Card.NormalCardBody({
              image: imageOne,
              aligned: true,
              border: false,
              ctaLink: false
            })
          }}
          {{
            Card.NormalCardBody({
              image: imageTwo,
              aligned: true,
              border: false,
              ctaLink: false
            })
          }}
          {{
            Card.NormalCardBody({
              image: imageThree,
              aligned: true,
              border: false,
              ctaLink: false
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Card Overlay</span>
          <a href="{{ Data.GetUrl() }}blocks/card-overlay">
            View More Examples
          </a>
        </div>
        <div class="umd-grid-gap-three my-md">
          {{
            CardOverlay.NormalCardBody({
              image: imageOne,
              ctaLink: false,
              ctaOption: 'external'
            })
          }}

          {{
            CardOverlay.NormalCardBody({
              ctaOption: 'download',
              ctaLink: false
            })
          }}

          {{
            CardOverlay.NormalCardBody({
              theme: 'dark',
              ctaLink: false,
              ctaOption: 'internal'
            })
          }}
        </div>
      </div>
    </section>
  </div>
{% endblock %}
