{% extends '_layout.twig' %}

{% import '../_data.twig' as Data %}
{% import './article.twig' as Article %}
{% import './card.twig' as Card %}
{% import './card-overlay.twig' as CardOverlay %}
{% import './event.twig' as Event %}
{% import './event-featured.twig' as EventFeatured %}
{% import './event-promo.twig' as EventPromo %}
{% import './feed-events.twig' as FeedEvents %}
{% import './feed-news.twig' as FeedNews %}
{% import _self as macros %}

{% set BlockPages = [
  {
    name: 'Article',
    link: 'article'
  },
  {
    name: 'Card',
    link: 'card'
  },
  {
    name: 'Card Overlay',
    link: 'card-overlay'
  },
  {
    name: 'Event',
    link: 'event'
  },
  {
    name: 'Event Featured',
    link: 'event-featured'
  },
  {
    name: 'Event Promo',
    link: 'event-promo'
  },
  {
    name: 'Feed Events',
    link: 'feed-events'
  },
  {
    name: 'Feed News',
    link: 'feed-news'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Display Type Block
      </h1>

      <p>
        Uses the small text lockup styles. View Other Components
      </p>

      <ul>
        {% for item in BlockPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Article</span>
          <a href="{{ _self.GetChildUrl() }}article">View More Examples</a>
        </div>

        {{ Article.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Card</span>
          <a href="{{ _self.GetChildUrl() }}card">View More Examples</a>
        </div>
        {{ Card.examplegrouped() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Card Overlay</span>
          <a href="{{ _self.GetChildUrl() }}card-overlay">View More Examples</a>
        </div>

        {{ CardOverlay.examplegrouped() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          <span>Event</span>
          <a href="{{ _self.GetChildUrl() }}event">View More Examples</a>
        </h3>
        <div class="umd-grid-gap-three mb-md" style="margin-top: 24px">
          {{ Event.example() }}
          {{ Event.example() }}
          {{ Event.example() }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          <span>Event Featured</span>
          <a href="{{ _self.GetChildUrl() }}event-featured">
            View More Examples
          </a>
        </h3>
        <div class="umd-grid-gap mb-md" style="margin-top: 24px">
          {{ EventFeatured.example() }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          <span>Display Promo</span>
          <a href="{{ _self.GetChildUrl() }}event-promo">View More Examples</a>
        </h3>
        <div class="umd-grid-gap mb-md" style="margin-top: 24px">
          {{ EventPromo.example() }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Feed - Events</span>
          <a href="{{ _self.GetChildUrl() }}feed-events">View More Examples</a>
        </h2>

        {{ FeedEvents.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Feed - News</span>
          <a href="{{ _self.GetChildUrl() }}feed-news">View More Examples</a>
        </h2>

        {{ FeedNews.example() }}
      </div>
    </section>
  </div>
{% endmacro %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'blocks/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in BlockPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}
