    <div class="umd-lock">
      <h1 class="page-heading">
        Carousel Cards
      </h1>

      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariations() }}
    </div>
  </section>

  <div id="normal" class="dropdown-selection" aria-hidden="false">
    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default
        </h3>
      </div>
      {{ macros.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Field Options</span>
          <span>Required Only</span>
        </div>
      </div>
      <umd-element-carousel-cards resize>
        {{ Headline.CarouselHeadlineNormal() }}

        <div slot="cards">
          {{
            CardOverlay.NormalCardBody({
              image: imageOne
            })
          }}

          {{
            CardOverlay.NormalCardBody({
              image: imageTwo
            })
          }}

          {{
            CardOverlay.NormalCardBody({
              theme: 'dark'
            })
