{% macro ContactOverwrite() %}
  <p slot="contact-headline">
    <a href="https://provost.umd.edu">
      Office of the Senior Vice President &amp; Provost
    </a>
  </p>

  <address slot="contact-address">
    <p>
      Suite 1132, Main Administration Building
    </p>
    <span>7901 Regents Drive College Park, MD 20742</span>
  </address>

  <div slot="contact-links">
    <a href="mailto:provost@umd.edu"><span>provost@umd.edu</span></a>
    <a href="tel:3014055252"><span>301.405.5252</span></a>
  </div>
{% endmacro %}

