{% extends '_layout.twig' %}

{% import _self as macros %}

{% set FooterPages = [
  {
    name: 'Simple',
    link: 'simple'
  },
  {
    name: 'Mega',
    link: 'mega'
  },
  {
    name: 'Visual',
    link: 'visual'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'footer/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in FooterPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Footer Elements
      </h1>

      <p>
        Additonal Component Examples:
      </p>

      <ul>
        {% for item in FooterPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Simple</span>
          <a href="{{ _self.GetChildUrl() }}simple">View More Examples</a>
        </div>
      </div>

      <umd-element-footer></umd-element-footer>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Mega</span>
          <a href="{{ _self.GetChildUrl() }}mega">View More Examples</a>
        </div>
      </div>

      <umd-element-footer type="mega"></umd-element-footer>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Visual</span>
          <a href="{{ _self.GetChildUrl() }}visual">View More Examples</a>
        </div>
      </div>

      <umd-element-footer type="visual"></umd-element-footer>
    </section>
  </div>
{% endmacro %}
