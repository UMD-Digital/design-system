{% extends '_layout.twig' %}

{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import '_includes/macros/fields/headline.twig' as Headline %}
{% import '_includes/macros/fields/text-slot-rich-text.twig' as RichText %}
{% import '_includes/macros/fields/eyebrow.twig' as Eyebrow %}
{% import _self as macros %}

{% set images = [
  'https://brandportal.umd.edu/m/226baa823376ccd2/original/CommencementVirtualBackgrounds_UMD_0001-JPG.png',
  'https://brandportal.umd.edu/m/7ba14bfbef057298/Hero_web-221008_as_fb_purdue_00024-Final-tif.jpg',
  'https://brandportal.umd.edu/m/32a10cb61438d320/Hero_web-PaintBranchBridge_Lights_07152018_6745_Final.jpg'
] %}

{% set image = random(images) %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent(params) %}
  <section style="padding-bottom: 100px;">
    <div class="umd-lock">
      <h1 class="page-heading component-title">
        Hero Default
      </h1>
    </div>

    <div class="umd-lock">
      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariations() }}
    </div>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default
        </h3>
      </div>

      {{ macros.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default with Centered Text
        </h3>
      </div>

      <umd-element-hero type="default-centered">
        <img slot="image"
          src="{{ image }}"
          alt="Image Description"
          data-caption="Photo: Bob lastname" />

        <p slot="eyebrow">
          {{ Eyebrow.PathwayEyebrowStringNormal() }}
        </p>
        <p slot="headline">
          Live From College Park
        </p>
        <p slot="text">
          {{ RichText.RichText120() }}
        </p>

        <div slot="actions">
          <umd-element-call-to-action type="primary" theme="dark">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-hero>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default with Default Image
        </h3>
      </div>

      <umd-element-hero type="default-centered">
        <p slot="eyebrow">
          {{ Eyebrow.PathwayEyebrowStringNormal() }}
        </p>
        <p slot="headline">
          Live From College Park
        </p>
        <p slot="text">
          {{ RichText.RichText120() }}
        </p>

        <div slot="actions">
          <umd-element-call-to-action type="primary" theme="dark">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-hero>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default with video
        </h3>
      </div>

      {{ macros.exampleVideo() }}
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default Interior
        </h3>
      </div>

      <umd-element-hero type="default-interior">
        <p slot="headline">
          Live From College Park
        </p>
        <p slot="text">
          {{ RichText.RichText120() }}
        </p>
      </umd-element-hero>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Default Interior with long text
        </h3>
      </div>

      <umd-element-hero type="default-interior">
        <p slot="headline">
          SustainableUMD Outreach Ambassadors
        </p>
        <div slot="text">
          <p>
            The Sustainability Outreach Team is a group of student
            SustainableUMD Ambassadors promoting a culture of sustainability at
            UMD. The Outreach Team has also been known as the LEAF team: Lead,
            Educate, Act, Facilitate!&nbsp; Ambassadors receive intensive and
            ongoing training in sustainability, leadership, and outreach.
          </p>
        </div>
      </umd-element-hero>
    </section>
  </section>
{% endmacro %}

{% macro example() %}
  <umd-element-hero>
    <img slot="image"
      src="{{ image }}"
      alt="Image Description"
      data-caption="Photo: Bob lastname" />

    <p slot="eyebrow">
      {{ Eyebrow.PathwayEyebrowStringNormal() }}
    </p>
    <p slot="headline">
      Live From College Park
    </p>
    <p slot="text">
      {{ RichText.RichText120() }}
    </p>

    <div slot="actions">
      <umd-element-call-to-action type="primary" theme="dark">
        <a href="https://google.com" aria-label="link to google">Learn More</a>
      </umd-element-call-to-action>
    </div>
  </umd-element-hero>
{% endmacro %}

{% macro exampleVideo() %}
  <umd-element-hero type="default">
    <video slot="video"
      loop=""
      muted=""
      webkit-playsinline=""
      playsinline=""
      autoplay=""
      preload=""
      poster="https://umd-admissions.transforms.svdcdn.com/production/rich-text/admissions-hero-compressed.00_00_00_00.Still001.jpg?w=1280&amp;h=720&amp;auto=compress%2Cformat&amp;fit=crop&amp;dm=1686155647&amp;s=dc3fcae2347455d4992609b4481b30f7">
      <source src="https://servd-umd-admissions.b-cdn.net/production/videos/admissions-hero-compressed_6.mp4"
        type="video/mp4" />
    </video>

    <p slot="eyebrow">
      {{ Eyebrow.PathwayEyebrowStringNormal() }}
    </p>
    <p slot="headline">
      {{ Headline.Headline20() }}
    </p>
    <p slot="text">
      {{ RichText.RichText120() }}
    </p>

    <div slot="actions">
      <umd-element-call-to-action type="primary" theme="dark">
        <a href="https://google.com" aria-label="link to google">Learn More</a>
      </umd-element-call-to-action>
    </div>
  </umd-element-hero>
{% endmacro %}
