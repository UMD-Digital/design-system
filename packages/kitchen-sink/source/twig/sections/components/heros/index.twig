{% extends '_layout.twig' %}

{% import './default.twig' as Default %}
{% import './logo.twig' as Logo %}
{% import './minimal.twig' as Minimal %}
{% import './overlay.twig' as Overlay %}
{% import './stacked.twig' as Stacked %}
{% import _self as macros %}

{% set HeroPages = [
  {
    name: 'Default',
    link: 'default'
  },
  {
    name: 'Logo',
    link: 'logo'
  },
  {
    name: 'Minimal',
    link: 'minimal'
  },
  {
    name: 'Overlay',
    link: 'overlay'
  },
  {
    name: 'Stacked',
    link: 'stacked'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'heros/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in HeroPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Hero Elements
      </h1>

      <p>
        Additonal Component Examples:
      </p>

      <ul>
        {% for item in HeroPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Default</span>
          <a href="{{ _self.GetChildUrl() }}default">View More Examples</a>
        </div>
      </div>

      {{ Default.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Logo</span>
          <a href="{{ _self.GetChildUrl() }}logo">View More Examples</a>
        </div>
      </div>

      {{ Logo.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Minimal</span>
          <a href="{{ _self.GetChildUrl() }}minimal">View More Examples</a>
        </div>
      </div>

      {{ Minimal.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Overlay</span>
          <a href="{{ _self.GetChildUrl() }}overlay">View More Examples</a>
        </div>
      </div>
      {{ Overlay.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Stacked</span>
          <a href="{{ _self.GetChildUrl() }}stacked">View More Examples</a>
        </div>
      </div>

      {{ Stacked.example() }}
    </section>
  </div>
{% endmacro %}
