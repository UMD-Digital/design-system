{% extends '_layout.twig' %}
{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import '_includes/macros/fields/headline.twig' as Headline %}
{% import '_includes/macros/fields/text-slot-rich-text.twig' as RichText %}
{% import '_includes/macros/fields/eyebrow.twig' as Eyebrow %}
{% import _self as macros %}

{% set logo = 'https://provost.umd.edu/logos/provost-logo-primary-light.png' %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent(params) %}
  <section style="padding-bottom: 100px;">
    <div class="umd-lock">
      <h1 class="page-heading component-title">
        Hero Logo
      </h1>
    </div>

    <div class="umd-lock">
      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariationsJs() }}
    </div>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Logo
        </h3>
      </div>

      {{ macros.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Logo - Dark Theme
        </h3>
      </div>

      <umd-element-hero-logo theme="dark">
        <div slot="image">
          <img src="https://creepy-cormorant.files.svdcdn.com/production/icons/logo.svg?dm=1618930939"
            alt="Image Description"
            style="width: 600px" />
        </div>

        <p slot="text">
          Energizing innovative companies to bring quantum technologies to
          market enim ad minim veniam, qullamco laboris nisi ute.
        </p>
      </umd-element-hero-logo>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          Logo - Dark Theme (headline example)
        </h3>
      </div>

      <umd-element-hero-logo theme="dark">
        <div slot="image">
          <img src="https://creepy-cormorant.files.svdcdn.com/production/icons/logo.svg?dm=1618930939"
            alt="Image Description"
            style="width: 600px" />
        </div>

        <p slot="headline">
          Energizing innovative companies to bring quantum technologies to
          market enim ad minim veniam, qullamco laboris nisi ute.
        </p>
      </umd-element-hero-logo>
    </section>
  </section>
{% endmacro %}

{% macro example() %}
  <umd-element-hero-logo theme="light">
    <div slot="image">
      <img src="{{ logo }}" alt="Image Description" style="width: 600px" />
    </div>

    <p slot="eyebrow">
      {{ Eyebrow.PathwayEyebrowStringNormal() }}
    </p>
    <p slot="headline">
      Live From College Park
    </p>
    <p slot="text">
      {{ RichText.RichText120() }}
    </p>

    <div slot="actions">
      <umd-element-call-to-action type="primary" theme="dark">
        <a href="https://google.com" aria-label="link to google">Learn More</a>
      </umd-element-call-to-action>
    </div>
  </umd-element-hero-logo>
{% endmacro %}
