{% extends '_layout.twig' %}

{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent(params) %}
  <div>
    <div class="umd-lock">
      <h1 class="umd-sans-largest" style="margin-bottom: 50px">
        Section Intro Wide
      </h1>
    </div>

    <section style="margin-bottom: 100px">
      <div class="umd-lock">
        <div class="content-heading" style="margin-bottom: 40px">
          <span>Type</span>
          <span>Wide</span>
        </div>
        {{ macros.example() }}
      </div>
    </section>

    <section style="margin-bottom: 100px; background-color: black; padding: 50px 0;">
      <div class="umd-lock">
        <div class="content-heading" style="margin-bottom: 40px">
          <span style="color: white">Type</span>
          <span style="color: white">Wide</span>
        </div>
        <umd-element-section-intro-wide theme="dark">
          <h2 slot="headline">
            FROM MARYLAND TODAY
          </h2>

          <umd-element-call-to-action type="secondary"
            theme="dark"
            slot="actions">
            <a href="https://today.umd.edu/">
              <span>See all election related content</span>
            </a>
          </umd-element-call-to-action>
        </umd-element-section-intro-wide>
      </div>
    </section>
  </div>
{% endmacro %}

{% macro example() %}
  <umd-element-section-intro-wide>
    <h2 slot="headline">
      FROM MARYLAND TODAY
    </h2>

    <umd-element-call-to-action type="secondary" slot="actions">
      <a href="https://today.umd.edu/">
        <span>See all election related content</span>
      </a>
    </umd-element-call-to-action>
  </umd-element-section-intro-wide>
{% endmacro %}
