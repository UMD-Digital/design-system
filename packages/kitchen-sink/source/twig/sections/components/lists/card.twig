          <img slot="image" src="{{ imageUrl }}" alt="Image Description" />

          <p slot="eyebrow">
            {{ EyebrowString.EyebrowStringNormal() }}
          </p>
          <p slot="headline">
            {{ HeadlineString.CardHeadlineStringNormal() }}
          </p>
          <div slot="text">
            <p>
              {{ RichTextString.CardRichTextStringNormal() }}
            </p>
            <p>
              {{ RichTextString.CardRichTextStringNormal() }}
            </p>
          </div>

          <div slot="actions">
            <umd-element-call-to-action type="secondary">
              <a href="https://google.com" aria-label="link to google">
                Learn More
              </a>
            </umd-element-call-to-action>
          </div>
        </umd-element-card>
      </div>
    </section>

    <section style="background-color: black; padding; 100px 0; margin-bottom: 40px;">
      <div class="umd-lock">
        <h3 class="content-heading">
          <span style="color: white">Card</span>
          <span style="color: white;">List Style - Theme Dark</span>
        </h3>

        <umd-element-card display="list" theme="dark">
          <img slot="image" src="{{ imageUrl }}" alt="Image Description" />

          <p slot="eyebrow">
            {{ EyebrowString.EyebrowStringNormal() }}
