{% set imageUrl = random(images) %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent(params) %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Standard Card
      </h1>

      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariationsJs() }}
    </div>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          <span>Card</span>
          <span>List Style</span>
        </h3>

        {{ macros.example() }}
        <umd-element-card display="list">
          <img slot="image" src="{{ imageUrl }}" alt="Image Description" />

          <p slot="headline">
            {{ HeadlineString.CardHeadlineStringNormal() }}
          </p>
          <p slot="text">
            {{ RichTextString.CardRichTextStringNormal() }}
          </p>

          <p slot="date">
            September 1, 2021
          </p>
        </umd-element-card>
