          <img slot="image" src="{{ imageUrl }}" alt="Image Description" />

          <p slot="eyebrow">
            {{ EyebrowString.EyebrowStringNormal() }}
          </p>
          <p slot="headline">
            {{ HeadlineString.CardHeadlineStringNormal() }}
          </p>
          <p slot="text">
            {{ RichTextString.CardRichTextStringNormal() }}
          </p>

          <p slot="date">
            September 1, 2021
          </p>

          <div slot="actions">
            <umd-element-call-to-action type="secondary">
              <a href="https://google.com" aria-label="link to google">
                Learn More
              </a>
            </umd-element-call-to-action>
          </div>
        </umd-element-card>
