{% extends '_layout.twig' %}

{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent(params) %}
  <section>
    <div class="umd-lock-smaller">
      <h1 class="page-heading">
        Feed Events List
      </h1>
    </div>

    <section>
      <div class="umd-lock-smaller">
        <h2 class="content-heading">
          No Results
        </h2>

        <umd-feed-events-list token="4zVU8phSIImj9Pb_XhvCLEj-OU5N6Rxw"
          row-count="2"
          show-count="4"
          categories="104"></umd-feed-events-list>
      </div>
    </section>

    <section>
      <div class="umd-lock-smaller">
        <h2 class="content-heading">
          <span>Multiple inclusions: (default union)</span>
          <span>Campus Leaders & Alumni Association</span>
        </h2>

        <div>
          {{ macros.example() }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock-smaller">
        <h2 class="content-heading">
          <span>Multiple inclusions: Intersection</span>
          <span>Campus Leaders & Alumni Association</span>
        </h2>

        <div>
          <umd-feed-events-list token="4zVU8phSIImj9Pb_XhvCLEj-OU5N6Rxw"
            categories="10256,10322"
            union="false"
            lazyload="true"></umd-feed-events-list>
        </div>
      </div>
    </section>

    <section style="padding: 50px 0; background-color: black;">
      <div class="umd-lock-smaller">
        <h2 class="content-heading">
          <span style="color: white;">Lazy Load with Stamp Events</span>
          <span style="color: white;">Limit 10</span>
        </h2>

        <div>
          <umd-feed-events-list token="4zVU8phSIImj9Pb_XhvCLEj-OU5N6Rxw"
            categories="92369"
            theme="dark"
            lazyload="true"
            row-count="10"></umd-feed-events-list>
        </div>
      </div>
    </section>
  </section>
{% endmacro %}

{% macro example() %}
  <umd-feed-events-list token="4zVU8phSIImj9Pb_XhvCLEj-OU5N6Rxw"
    categories="10256,10322"
    lazyload="true"></umd-feed-events-list>
{% endmacro %}
