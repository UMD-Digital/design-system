      <h1 class="page-heading">
        Display Type List
      </h1>

      <p>
        Uses the small text lockup styles. View other list components:
      </p>

      <ul>
        {% for item in ListPages %}
          <li>
            <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock-smaller">
        <div class="content-heading" style="margin-bottom: 24px">
          <span>Article</span>
          <a href="{{ _self.GetChildUrl() }}article">View More Examples</a>
        </div>

        <umd-element-article display="list">
          <img slot="image" src="{{ imageOne }}" alt="Image Description" />

          <p slot="eyebrow">
            Eyebrow Text
          </p>
