{% extends '_layout.twig' %}

{% import '_includes/macros/card.twig' as Card %}
{% import '../_data.twig' as Data %}

{% set ListPages = [
  {
    name: 'Article',
    link: 'article'
  },
  {
    name: 'Card',
    link: 'card'
  },
  {
    name: 'Event',
    link: 'event'
  },
  {
    name: 'Feed Events',
    link: 'feed-events'
  },
  {
    name: 'Feed Events Grouped',
    link: 'feed-events-grouped'
  },
  {
    name: 'Feed News',
    link: 'feed-news'
  }
] %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'lists/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in ListPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}

{% block page %}
  {% set imageOne = random(RecImageOptions) %}
  {% set imageTwo = random(RecImageOptions) %}
  {% set imageThree = random(RecImageOptions) %}

