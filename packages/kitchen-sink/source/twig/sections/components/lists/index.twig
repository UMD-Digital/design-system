{% extends '_layout.twig' %}

{% import './article.twig' as Article %}
{% import './card.twig' as Card %}
{% import './event.twig' as Event %}
{% import './feed-events.twig' as FeedEvents %}
{% import './feed-events-grouped.twig' as FeedEventsGrouped %}
{% import './feed-news.twig' as FeedNews %}
{% import _self as macros %}

{% set ListPages = [
  {
    name: 'Article',
    link: 'article'
  },
  {
    name: 'Card',
    link: 'card'
  },
  {
    name: 'Event',
    link: 'event'
  },
  {
    name: 'Feed Events',
    link: 'feed-events'
  },
  {
    name: 'Feed Events Grouped',
    link: 'feed-events-grouped'
  },
  {
    name: 'Feed News',
    link: 'feed-news'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  {{ app }}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock-smaller">
      <h1 class="page-heading">
        List Elements
      </h1>

      <p>
        Display Type of List.
      </p>

      <p>
        Uses the small text lockup styles.
      </p>

      <p>
        View Other Components
      </p>

      <ul>
        {% for item in ListPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock-smaller">
        <div class="content-heading" style="margin-bottom: 24px">
          <span>Article</span>
          <a href="{{ _self.GetChildUrl() }}article">View More Examples</a>
        </div>

        {{ Article.example() }}
        {{ Article.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock-smaller">
        <div class="content-heading" style="margin-bottom: 24px;">
          <span>Card</span>
          <a href="{{ _self.GetChildUrl() }}card">View More Examples</a>
        </div>

        {{ Card.example() }}
        {{ Card.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock-smaller">
        <h3 class="content-heading">
          <span>Event</span>
          <a href="{{ _self.GetChildUrl() }}event">View More Examples</a>
        </h3>

        {{ Event.example() }}
        {{ Event.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock-smaller">
        <h2 class="content-heading">
          <span>Feed - Events</span>
          <a href="{{ _self.GetChildUrl() }}feed-events">View More Examples</a>
        </h2>

        {{ FeedEvents.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock-smaller">
        <h2 class="content-heading">
          <span>Feed - News</span>
          <a href="{{ Data.GetUrl() }}lists/feed-events-grouped">
            View More Examples
          </a>
        </h2>

        {{ FeedEventsGrouped.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock-smaller">
        <h2 class="content-heading">
          <span>Feed - News</span>
          <a href="{{ _self.GetChildUrl() }}feed-news">View More Examples</a>
        </h2>

        {{ FeedNews.example() }}
      </div>
    </section>
  </div>
{% endmacro %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'lists/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in ListPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}
