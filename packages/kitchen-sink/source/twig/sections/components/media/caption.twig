{% extends '_layout.twig' %}

{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent(params) %}
  <div style="padding-bottom: 50px;">
    <section>
      <div class="umd-lock">
        <p class="content-heading">
          <span>Media Inline</span>
          <span>Default</span>
        </p>

        <umd-element-media-inline>
          <img src="https://umd-terp.transforms.svdcdn.com/production/images/inset_CK0U3473.jpg?w=700&h=467&auto=compress%2Cformat&fit=crop&dm=1684936630&s=26b03883f3c9994d87e901ac360fe8eb"
            alt="Logo"
            data-caption="Lorem ipsum dolor"
            slot="image" />
        </umd-element-media-inline>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <p class="content-heading">
          <span>Media Inline</span>
          <span>With Caption</span>
        </p>

        {{ macros.example() }}
      </div>
    </section>
  </div>
{% endmacro %}

{% macro example() %}
  <umd-element-media-inline>
    <img src="https://umd-terp.transforms.svdcdn.com/production/images/inset_CK0U3473.jpg?w=700&h=467&auto=compress%2Cformat&fit=crop&dm=1684936630&s=26b03883f3c9994d87e901ac360fe8eb"
      alt="Logo"
      data-caption="Lorem ipsum dolor"
      slot="image" />
    <p slot="caption">
      Knoxville police officers Andrell Cummings (left) and Conner Wiesenberg
      look at a memorial to a resident killed last year.
    </p>
  </umd-element-media-inline>
{% endmacro %}
