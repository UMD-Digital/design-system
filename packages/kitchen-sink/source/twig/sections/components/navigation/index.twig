{% extends '_layout.twig' %}

{% import './header.twig' as Header %}
{% import './slider.twig' as Slider %}
{% import _self as macros %}

{% set NavigationPages = [
  {
    name: 'Drawer',
    link: 'drawer'
  },
  {
    name: 'Item',
    link: 'item'
  },
  {
    name: 'Header',
    link: 'header'
  },
  {
    name: 'Slider',
    link: 'Slider'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Navigation Components
      </h1>

      <p>
        View other navigation components:
      </p>
      <ul>
        {% for item in NavigationPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Header: Provost</span>
          <a href="{{ _self.GetChildUrl() }}header">View More Examples</a>
        </div>
      </div>
      {{ Header.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <p class="content-heading">
          <span>Interior Slider</span>
          <a href="{{ _self.GetChildUrl() }}slider">View More Examples</a>
        </p>

        {{ Slider.example() }}
      </div>
    </section>
  </div>
{% endmacro %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'navigation/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in NavigationPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}
