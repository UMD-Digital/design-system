{% extends '_layout.twig' %}

{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <div>
    <div class="umd-lock">
      <h1 class="page-heading component-title">
        Navigation Slider
      </h1>
    </div>

    <section style="min-height: 20vh;">
      <div class="umd-lock">
        <p class="content-heading">
          <span>Interior Navigation slider</span>
          <span>One Teir</span>
        </p>

        {{ macros.example() }}
      </div>
    </section>

    <section style="min-height: 20vh; padding-bottom: 50px;">
      <div class="umd-lock">
        <p class="content-heading">
          <span>Interior Navigation slider</span>
          <span>Multiple Teirs</span>
        </p>

        <umd-element-nav-slider style="max-width: 500px;">
          <div slot="primary-slide-links">
            <a href="https://google.com"><span>About</span></a>
          </div>

          <div slot="primary-slide-secondary-links">
            <a href="https://github.com" data-child-ref="slide-1">
              <span>Real estate</span>
            </a>
            <a href="https://github.com" data-child-ref="slide-2">
              <span>Amenities & Attractions</span>
            </a>
            <a href="https://apple.com"><span>Discovery Distract</span></a>
          </div>

          <div slot="children-slides">
            <div data-parent-ref="slide-1">
              <a href="https://docs.google.com/"><span>About Child</span></a>
            </div>

            <div data-parent-ref="slide-2">
              <a href="https://docs.google.com/" data-child-ref="slide-level-3">
                <span>More Levels</span>
              </a>
              <a href="https://docs.google.com/">
                <span>Just Another Link</span>
              </a>
              <a href="https://docs.google.com/">
                <span>Just Another Link Part II</span>
              </a>
            </div>

            <div data-parent-ref="slide-level-3">
              <a href="https://docs.google.com/"><span>Level 3 One</span></a>
              <a href="https://docs.google.com/"><span>Level 3 Two</span></a>
            </div>
          </div>

          <div slot="primary-slide-content">
            <p style="line-height: 1.5em;">
