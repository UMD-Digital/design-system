{% extends '_layout.twig' %}

{% import './hero.twig' as Hero %}
{% import './highlight.twig' as Highlight %}
{% import './overlay.twig' as Overlay %}
{% import './standard.twig' as Standard %}
{% import _self as macros %}

{% set PathwayPages = [
  {
    name: 'Hero',
    link: 'hero'
  },
  {
    name: 'Highlight',
    link: 'highlight'
  },
  {
    name: 'Overlay',
    link: 'overlay'
  },
  {
    name: 'Standard',
    link: 'standard'
  }
] %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'pathways/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in PathwayPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}

{% macro pagecontent() %}
  <div style="padding-bottom: 50px;">
    <div class="umd-lock">
      <h1 class="page-heading">
        Pathway Elements
      </h1>

      <p>
        Additonal Component Examples:
      </p>

      <ul>
        {% for item in PathwayPages %}
          <li>
            <umd-element-call-to-action type="secondary">
              <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
            </umd-element-call-to-action>
          </li>
        {% endfor %}
      </ul>
    </div>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Hero</span>
          <a href="{{ _self.GetChildUrl() }}hero">View More Examples</a>
        </div>
      </div>

      {{ Hero.displayWithOptions() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Highlight</span>
          <a href="{{ _self.GetChildUrl() }}highlight">View More Examples</a>
        </div>
      </div>
      {{ Highlight.displayWithOptions() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Overlay</span>
          <a href="{{ _self.GetChildUrl() }}overlay">View More Examples</a>
        </div>
      </div>
      {{
        Overlay.displayWithOptions({
          theme: 'dark'
        })
      }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Standard</span>
          <a href="{{ _self.GetChildUrl() }}standard">View More Examples</a>
        </div>
      </div>
      {{
        Standard.displayWithOptions({
          eyebrow: false
        })
      }}
    </section>
  </div>
{% endmacro %}
