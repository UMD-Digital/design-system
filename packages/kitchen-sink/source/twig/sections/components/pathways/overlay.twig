{% extends '_layout.twig' %}

{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <section style="padding-bottom: 20vh">
    <div class="umd-lock">
      <h1 class="page-heading component-title">
        Pathway Overlay
      </h1>
    </div>

    <div class="umd-lock">
      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariationsJs() }}
    </div>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Overlay</span>
          <span>Theme Dark</span>
        </h2>
      </div>
      {{
        macros.displayWithOptions({
          theme: 'dark'
        })
      }}
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Overlay</span>
          <span>Theme Light</span>
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          theme: 'light',
          position: 'left'
        })
      }}
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span class="type">Overlay</span>
          <span>Theme Maryland</span>
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          theme: 'maryland',
          ctaLink: 'secondary'
        })
      }}
    </section>
  </section>
{% endmacro %}

{% macro displayWithOptions(params) %}
  {% set hasImage = params.image ?? true %}
  {% set hasEyebrow = params.eyebrow ?? true %}
  {% set hasHeadline = params.headline ?? true %}
  {% set hasRichText = params.text ?? true %}
  {% set ctaType = params.ctaType ?? 'primary' %}
  {% set imagePosition = params.position ?? 'right' %}
  {% set hasEvent = params.event ?? true %}
  {% set theme = params.theme ?? null %}

  {% set images = [
    'https://brandportal.umd.edu/m/226baa823376ccd2/original/CommencementVirtualBackgrounds_UMD_0001-JPG.png',
    'https://brandportal.umd.edu/m/7ba14bfbef057298/Hero_web-221008_as_fb_purdue_00024-Final-tif.jpg',
    'https://brandportal.umd.edu/m/32a10cb61438d320/Hero_web-PaintBranchBridge_Lights_07152018_6745_Final.jpg',
    'https://brandportal.umd.edu/m/5575d79a05956663/Hero_web-AntietamBlush_Harvesting_10302018_2825_edit.jpg',
    'https://brandportal.umd.edu/m/745a4beb711b75f8/Hero_web-Mall_09112017_2982-tif.jpg'
  ] %}

  <umd-element-pathway type="overlay"
    theme="{{ theme }}"
    image-position="{{ imagePosition }}">
    {% if hasImage %}
      <div slot="image">
        <img src="{{ random(images) }}" alt="Image" />
      </div>
    {% endif %}

    {% if hasEyebrow %}
      <p slot="eyebrow">
        Optional Eyebrow
      </p>
    {% endif %}

    {% if hasEvent %}
      <div slot="start-date-iso">
        2024-04-12T12:00:00.000Z
      </div>

      <div slot="end-date-iso">
        2024-04-12T17:30:00.000Z
      </div>

      <div slot="location">
        Adele H. Stamp Student Union
      </div>
    {% endif %}

    {% if hasHeadline %}
      <h2 slot="headline">
        Headline Text
      </h2>
    {% endif %}

    {% if hasRichText %}
      <p slot="text">
        Rich Text
      </p>
    {% endif %}

    <div slot="actions">
      <umd-element-call-to-action type="{{ ctaType }}" theme="{{ theme }}">
        <a href="https://google.com" aria-label="link to google">Learn More</a>
      </umd-element-call-to-action>
    </div>
  </umd-element-pathway>
{% endmacro %}
