{% extends '_layout.twig' %}

{% import '_includes/content-dropdown.twig' as Dropdown %}
{% import '../atomic/stat.twig' as Stat %}
{% import _self as macros %}

{% block page %}
  {{ macros.pagecontent() }}
{% endblock %}

{% macro pagecontent() %}
  <section style="padding-bottom: 20vh">
    <div class="umd-lock">
      <h1 class="page-heading component-title">
        Pathway Standard
      </h1>
    </div>

    <div class="umd-lock">
      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariations() }}
    </div>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          Standard
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          eyebrow: false
        })
      }}
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Image Position Left</span>
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          position: 'left'
        })
      }}
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Event</span>
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          event: true,
          eyebrow: false
        })
      }}
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Stats</span>
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          stats: true,
          eyebrow: false
        })
      }}
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Image Scaling Off</span>
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          scaled: false
        })
      }}
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Quantum Example</span>
        </h2>
      </div>

      <umd-element-pathway class="umd-layout-background-color-dark"
        image-scaled="false"
        theme="dark"
        image-position="left">
        <img slot="image"
          src="https://creepy-cormorant.transforms.svdcdn.com/staging/rich-text/MQA-SP@3x_0.png?w=434&h=174&auto=compress%2Cformat&fit=crop&dm=1624377782&s=a34474b744e3ded49ff0cd6932fdb33b"
          alt="Image" />

        <div slot="text">
          <p>
            Body Text
          </p>
        </div>

        <div slot="actions">
          <umd-element-call-to-action type="secondary" theme="dark">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-pathway>
    </section>

    <section style="padding: 50px 0; background-color: #f1f1f1;">
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Theme Light</span>
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          scaled: false,
          theme: 'light',
          event: true,
          ctaType: 'primary'
        })
      }}
    </section>

    <section style="padding: 50px 0; background-color: black;">
      <div class="umd-lock">
        <h2 class="content-heading">
          <span style="color: white;">Standard</span>
          <span style="color: white;">Theme Dark</span>
        </h2>
      </div>

      {{
        macros.displayWithOptions({
          position: 'left',
          theme: 'dark',
          event: true,
          ctaType: 'primary'
        })
      }}
    </section>

    <div class="umd-lock" style="margin: 50px 0;">
      <h2 class="page-heading" style="margin: 0px; padding: 0;">
        Pathway Edge Cases
      </h2>
    </div>

    <section style="padding: 100px 0; background-color: #f1f1f1;">
      <div class="umd-lock" style="margin-bottom: 100px;">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Theme Light with Intro Text</span>
        </h2>
      </div>

      <umd-element-section-intro class="umd-layout-vertical-landing-child">
        <h2 slot="text">
          We are activating fearless ideas for transformational impact by
          fostering research and industry partnerships, supporting small
          businesses, and nurturing the growth of next generation technology
          ventures.
        </h2>
      </umd-element-section-intro>

      {{
        macros.displayWithOptions({
          theme: 'light',
          event: true,
          ctaType: 'primary'
        })
      }}
    </section>
  </section>
{% endmacro %}

{% macro displayWithOptions(params) %}
  {% set hasImage = params.image ?? true %}
  {% set hasEyebrow = params.eyebrow ?? true %}
  {% set hasHeadline = params.headline ?? true %}
  {% set hasRichText = params.text ?? true %}
  {% set imageScaled = params.scaled ?? true %}
  {% set hasEvent = params.event ?? false %}
  {% set hasStats = params.stats ?? false %}
  {% set theme = params.theme ?? null %}
  {% set ctaType = params.ctaType ?? 'secondary' %}
  {% set imagePosition = params.position ?? 'right' %}

  {% set images = [
    'https://brandportal.umd.edu/m/226baa823376ccd2/original/CommencementVirtualBackgrounds_UMD_0001-JPG.png',
    'https://brandportal.umd.edu/m/7ba14bfbef057298/Hero_web-221008_as_fb_purdue_00024-Final-tif.jpg',
    'https://brandportal.umd.edu/m/32a10cb61438d320/Hero_web-PaintBranchBridge_Lights_07152018_6745_Final.jpg',
    'https://brandportal.umd.edu/m/5575d79a05956663/Hero_web-AntietamBlush_Harvesting_10302018_2825_edit.jpg',
    'https://brandportal.umd.edu/m/745a4beb711b75f8/Hero_web-Mall_09112017_2982-tif.jpg',
    'https://brandportal.umd.edu/m/36b2e06f0db27eda/Hero_web-IribeDedication_MM_04272019_6208.jpg',
    'https://brandportal.umd.edu/m/55565fbba3b510d6/Hero_web-Campus_Snow_01032022_JC_8215.jpg',
    'https://brandportal.umd.edu/m/2af0dd6b6ef78a48/Hero_web-Students_Outdoors_02052019_7673.jpg',
    'https://brandportal.umd.edu/m/3b312bf001fda9f3/Hero_web-DriskellCenter_PosingBeauty_SC_02012019_4311.jpg',
    'https://brandportal.umd.edu/m/4f2058b2174fdcfc/Hero_web-Campus_Snow_02202019_3724.jpg',
    'https://brandportal.umd.edu/m/25a6294e01fab473/Hero_web-Students_ESJLTC_07282020_EH_1593.jpg'
  ] %}

  {% set classList = [] %}
  {% if theme == 'dark' %}
    {% set classList = classList|merge(['umd-layout-background-color-dark']) %}
  {% endif %}

  <umd-element-pathway class="{{ classList|join('') }}"
    theme="{{ theme }}"
    image-position="{{ imagePosition }}"
    image-scaled="{{ imageScaled }}">
    {% if hasImage %}
      <div slot="image">
        <img src="{{ random(images) }}" alt="Image" />
      </div>
    {% endif %}

    {% if hasEyebrow %}
      <p slot="eyebrow">
        Optional Eyebrow
      </p>
    {% endif %}

    {% if hasHeadline %}
      <h2 slot="headline">
        Headline Text
      </h2>
    {% endif %}

    {% if hasEvent %}
      <div slot="start-date-iso">
        2024-04-12T12:00:00.000Z
      </div>

      <div slot="end-date-iso">
        2024-04-12T17:30:00.000Z
      </div>

      <div slot="location">
        Adele H. Stamp Student Union
      </div>
    {% endif %}

    {% if hasRichText %}
      <p slot="text">
        Rich Text
      </p>
    {% endif %}

    <div slot="actions">
      <umd-element-call-to-action type="{{ ctaType }}" theme="{{ theme }}">
        <a href="/" aria-label="link to google">Learn More</a>
      </umd-element-call-to-action>
    </div>

    {% if hasStats %}
      <div slot="stats">
        {{
          Stat.displayWithOptions({
            size: 'large'
          })
        }}
        {{
          Stat.displayWithOptions({
            size: 'large',
            stat: '#19'
          })
        }}
      </div>
    {% endif %}
  </umd-element-pathway>
{% endmacro %}
