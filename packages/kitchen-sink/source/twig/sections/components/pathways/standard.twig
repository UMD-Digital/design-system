    <div class="umd-lock">
      <h1 class="page-heading">
        Pathway Standard
      </h1>
    </div>

    <div class="umd-lock">
      <h2 class="content-heading">
        Content Variations
      </h2>

      {{ Dropdown.ContentVariationsJs() }}
    </div>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          Standard
        </h2>
      </div>

      {{ macros.example() }}
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Image Position Left</span>
        </h2>
      </div>

      <umd-element-pathway image-position="left">
        <img slot="image"
          src="{{ image }}"
          alt="Image"
          data-caption="Photo: Bob lastname" />

        <p slot="eyebrow">
          Eyebrow Text
        </p>

        <p slot="headline">
          Headline Text
        </p>

        <div slot="text">
          <p>
            Body Text
          </p>
        </div>

        <div slot="actions">
          <umd-element-call-to-action type="secondary">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-pathway>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Event</span>
        </h2>
      </div>

      <umd-element-pathway>
        <div slot="image">
          <img src="{{ image }}" alt="Image" />
        </div>

        <p slot="headline">
          Headline Text
        </p>

        <div slot="start-date-iso">
          2024-04-12T12:00:00.000Z
        </div>

        <div slot="end-date-iso">
          2024-04-12T17:30:00.000Z
        </div>

        <div slot="location">
          Adele H. Stamp Student Union
        </div>

        <div slot="text">
          <p>
            Body Text
          </p>
        </div>

        <div slot="actions">
          <umd-element-call-to-action type="secondary">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-pathway>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Stats</span>
        </h2>
      </div>

      <umd-element-pathway>
        <div slot="image">
          <img src="{{ image }}" alt="Image" />
        </div>

        <p slot="headline">
          Headline Text
        </p>

        <div slot="text">
          <p>
            Body Text
          </p>
        </div>

        <div slot="actions">
          <umd-element-call-to-action type="secondary">
            <a href="https://google.com" aria-label="link to google">
              Learn More
            </a>
          </umd-element-call-to-action>
        </div>

        <div slot="stats">
          <umd-element-stat size="large">
            <div slot="stat">
              #19
            </div>
            <div slot="text">
              Top public university
            </div>
            <div slot="sub-text">
              Source: 2022-23 U.S. News & World Report
            </div>
          </umd-element-stat>

          <umd-element-stat size="large">
            <div slot="stat">
              10th
            </div>
            <div slot="text">
              among public institutions for research development & spending
            </div>
            <div slot="sub-text">
              Source: 2022-23 U.S. News & World Report
            </div>
          </umd-element-stat>
        </div>
      </umd-element-pathway>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Standard</span>
          <span>Image Scaling Off</span>
        </h2>
      </div>

