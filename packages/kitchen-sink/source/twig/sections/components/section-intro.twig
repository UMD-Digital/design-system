{% extends '../../_layout.twig' %}

{% block page %}
  <div class="umd-lock">
    <h1 class="umd-sans-largest" style="margin-bottom: 50px">
      Section Intro
    </h1>
  </div>

  <section style="margin-bottom: 100px">
    <div class="umd-lock">
      <div class="content-heading type-hr">
        <span>Type</span>
        <span>Default</span>
      </div>
      <umd-element-section-intro>
        <h2 slot="headline">
          FROM MARYLAND TODAY
        </h2>
        <umd-element-call-to-action type="secondary" slot="actions">
          <a href="/"><span>See all election related content</span></a>
        </umd-element-call-to-action>
      </umd-element-section-intro>
    </div>
  </section>

  <section style="margin-bottom: 100px">
    <div class="umd-lock">
      <div class="content-heading type-hr">
        <span>Type</span>
        <span>Default With Line</span>
      </div>
      <umd-element-section-intro include-separator>
        <h2 slot="headline">
          FROM MARYLAND TODAY
        </h2>
        <umd-element-call-to-action type="secondary" slot="actions">
          <a href="/"><span>See all election related content</span></a>
        </umd-element-call-to-action>
      </umd-element-section-intro>
    </div>
  </section>

  <section style="margin-bottom: 100px">
    <div class="umd-lock">
      <div class="content-heading type-hr">
        <span>Type</span>
        <span>Multiple Actions</span>
      </div>
      <umd-element-section-intro include-separator>
        <h2 slot="headline">
          OTHER WAYS TO GET INVOLVED
        </h2>

        <div slot="actions">
          <umd-element-call-to-action type="secondary">
            <a href="https://today.umd.edu/">
              <span>Volunteer to register voters</span>
            </a>
          </umd-element-call-to-action>
          <umd-element-call-to-action type="secondary">
            <a href="https://today.umd.edu/">
              <span>Be a watcher/challenger at an early voting site</span>
            </a>
          </umd-element-call-to-action>
          <umd-element-call-to-action type="secondary">
            <a href="https://today.umd.edu/">
              <span>Serve as an election judge</span>
            </a>
          </umd-element-call-to-action>
          <umd-element-call-to-action type="secondary">
            <a href="https://today.umd.edu/">
              <span>Know your voting rights</span>
            </a>
          </umd-element-call-to-action>
          <umd-element-call-to-action type="secondary">
            <a href="https://today.umd.edu/">
              <span>See all election related content</span>
            </a>
          </umd-element-call-to-action>
        </div>
      </umd-element-section-intro>
    </div>
  </section>

  <div class="umd-lock">
    <div class="content-heading type-hr">
      <span>Section Intro</span>
      <span>Wide</span>
    </div>
  </div>

  <div class="umd-lock">
    <umd-component-intro-wide>
      <div class="intro-content-wrapper">
        <h2 class="umd-sans-largest">
          FROM MARYLAND TODAY
        </h2>
        <div class="umd-grid-row-mobile-tablet">
          <umd-element-call-to-action type="secondary">
            <a href="/"><span>See all election related content</span></a>
          </umd-element-call-to-action>
        </div>
      </div>
    </umd-component-intro-wide>
  </div>
{% endblock %}
