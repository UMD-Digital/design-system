{% extends '_layout.twig' %}

{% import './events.twig' as SliderEvents %}
{% import _self as macros %}

{% set SliderPages = [
  {
    name: 'Events',
    link: 'events'
  }
] %}

{% block page %}
  <div style="padding-bottom: 50px;">
    <section>
      <div class="umd-lock">
        <h1 class="page-heading">
          Sliders
        </h1>

        <p>
          View other slider components:
        </p>
        <ul>
          {% for item in SliderPages %}
            <li>
              <umd-element-call-to-action type="secondary">
                <a href="{{ _self.GetChildUrl ~ item.link }}">
                  {{ item.name }}
                </a>
              </umd-element-call-to-action>
            </li>
          {% endfor %}
        </ul>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h3 class="content-heading">
          <span>Events</span>
          <a href="{{ _self.GetChildUrl() }}events">View More Examples</a>
        </h3>

        {{ SliderEvents.example() }}
      </div>
    </section>
  </div>
{% endblock %}

{% macro GetChildUrl() %}
  {% import '../_data.twig' as Data %}

  {% set URL = Data.GetUrl() ~ 'sliders/' %}
  {{ URL }}
{% endmacro %}

{% macro SubLinks() %}
  {% for item in SliderPages %}
    <a href="{{ _self.GetChildUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}
