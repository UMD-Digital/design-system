{% set list = [
  {
    name: 'Background',
    link: 'background'
  },
  {
    name: 'Borders',
    link: 'borders'
  },
  {
    name: 'Content',
    link: 'content'
  },
  {
    name: 'Grid',
    link: 'grid'
  },
  {
    name: 'Lock',
    link: 'lock'
  }
] %}

{% macro GetUrl() %}
  {% set URL = '/sections/layout/' %}
  {{ URL }}
{% endmacro %}

{% macro DisplayName() %}
  {% for item in list %}
    {{ item.name }}
  {% endfor %}
{% endmacro %}

{% macro LayoutLinks() %}
  <ul>
    {% for item in list %}
      <li><a href="{{ _self.GetUrl ~ item.link }}">{{ item.name }}</a></li>
    {% endfor %}
  </ul>
{% endmacro %}

{% macro Links() %}
  {% for item in list %}
    <a href="{{ _self.GetUrl ~ item.link }}">{{ item.name }}</a>
  {% endfor %}
{% endmacro %}
