{% extends '../../_layout.twig' %}

{% import '../components/heros/default.twig' as DefaultHero %}
{% import '../components/heros/overlay.twig' as OverlayHero %}
{% import '../components/blocks/card-overlay.twig' as CardOverlay %}
{% import '../components/blocks/event-promo.twig' as EventPromo %}
{% import '../components/carousels/cards.twig' as CardCarousel %}
{% import '../components/sliders/events.twig' as SliderEvents %}
{% import '../components/accessories/accordion.twig' as Accordion %}

{% block page %}
  <div style="padding-bottom: 50px;">
    <section>
      <div class="umd-lock">
        <h1 class="umd-campaign-extralarge">
          Animations
        </h1>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Links</span>
          <span>Slide-in Underline</span>
        </h2>
        <div class="flex flex-col items-start gap-y-sm umd-sans-larger">
          <a href="#" class="umd-slidein-underline-red">
            <span>UMD Slidein Underline Red</span>
          </a>
          <a href="#" class="umd-slidein-underline-gold">
            <span>UMD Slidein Underline Gold</span>
          </a>
          <a href="#" class="umd-slidein-underline-black">
            <span>UMD Slidein Underline Black</span>
          </a>
          <div class="p-xs bg-black text-white">
            <a href="#" class="umd-slidein-underline-white">
              <span>UMD Slidein Underline White</span>
            </a>
          </div>
          <a href="#" class="umd-slidein-underline-gray-red">
            <span>UMD Slidein Underline Gray to Red</span>
          </a>
          <a href="#" class="umd-slidein-underline-graydark-red">
            <span>UMD Slidein Underline Gray Dark to Red</span>
          </a>
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading">
          <span>Links</span>
          <span>Fade-in Underline</span>
        </h2>

        <div class="flex flex-col items-start gap-y-sm umd-sans-larger">
          <a href="#" class="umd-fadein-underline-red">
            <span>UMD Fadein Underline Red</span>
          </a>
          <a href="#" class="umd-fadein-underline-gold">
            <span>UMD Fadein Underline Gold</span>
          </a>
          <a href="#" class="umd-fadein-underline-black">
            <span>UMD Fadein Underline Black</span>
          </a>
          <a href="#" class="umd-fadein-underline-gray">
            <span>UMD Fadein Underline Gray</span>
          </a>
          <div class="p-xs bg-black text-white">
            <a href="#" class="umd-fadein-underline-white">
              <span>UMD Fadein Underline White</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Default Hero</span>
          <span>With Video</span>
        </div>
      </div>

      {{ DefaultHero.exampleVideo() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Hero</span>
          <span>Dark Theme Overlay with Video</span>
        </div>
      </div>

      {{ OverlayHero.exampleVideo() }}
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Overlay Card</span>
          <span>GIF with Pause Button</span>
        </div>

        <div class="umd-grid-gap-three">
          {{
            CardOverlay.displayWithOptions({
              gif: true
            })
          }}
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Display Promo</span>
          <span>Image, Title, Call to Action Animations on Hover</span>
        </div>

        <div class="umd-grid-gap">
          {{ EventPromo.example() }}
        </div>
      </div>
    </section>
    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Carousel Cards</span>
          <span>Animation on Manual Navigation</span>
        </div>

        {{ CardCarousel.example() }}
      </div>
    </section>
    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Date Slider</span>
          <span>Animation on Manual Navigation</span>
        </div>

        {{ SliderEvents.example() }}
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <div class="content-heading">
          <span>Accordion</span>
          <span>Animation on Manual Navigation</span>
        </div>

        {{ Accordion.exampleOpen() }}
        {{ Accordion.exampleClosed() }}
      </div>
    </section>
  </div>
{% endblock %}
