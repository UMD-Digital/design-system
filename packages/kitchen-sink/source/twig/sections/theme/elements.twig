{% extends '../../_layout.twig' %}

{% block page %}
  <div style="padding-bottom: 100px;">
    <section class="pb-xl">
      <div class="umd-lock">
        <h1 class="umd-campaign-extralarge font-bold">
          Elements
        </h1>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading type-hr" style="margin-bottom: 30px">
          <span>Loader</span>
        </h2>

        <div class="py-lg">
          <div class="umd-loader"></div>
        </div>
      </div>
    </section>

    <section>
      <div class="umd-lock">
        <h2 class="content-heading type-hr" style="margin-bottom: 50px">
          <span>Watermark</span>
        </h2>
      </div>

      <div class="umd-watermark-container">
        <p class="umd-watermark"
          aria-hidden="true"
          tab-index="-1"
          role="presentation">
          RESOURCES
        </p>
      </div>
      <div class="umd-lock">
        <h1 class="umd-sans-largest page-title">
          <span>RESOURCES FOR TERPS</span>
        </h1>
      </div>
    </section>

    <section style="padding: 50px 0; margin-top: 100px; background-color: black;">
      <div class="umd-lock">
        <h2 class="content-heading type-hr" style="margin-bottom: 50px">
          <span style="color: white">Watermark</span>
          <span style="color: white">Dark Theme</span>
        </h2>
      </div>

      <div class="umd-watermark-container">
        <p class="umd-watermark-dark"
          data-treatment="MEDIA"
          aria-hidden="true"
          tab-index="-1"
          role="presentation">
          MEDIA
        </p>
      </div>
      <div class="umd-lock">
        <umd-element-section-intro-wide theme="dark">
          <h2 slot="headline">
            <span>RESOURCES FOR THE MEDIA</span>
          </h2>

          <umd-element-call-to-action type="secondary"
            theme="dark"
            slot="actions">
            <a href="/"><span>See all experts</span></a>
          </umd-element-call-to-action>
        </umd-element-section-intro-wide>
      </div>
    </section>
  </div>
{% endblock %}
