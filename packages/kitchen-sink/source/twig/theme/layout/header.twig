{% extends '../../_layout.twig' %}

{% block page %}
  <section class="pb-2xl">
    <div class="umd-lock">
      <h1 class="umd-sans-large font-bold mb-sm">
        Header Layout
      </h1>

      <div class="umd-header-container" role="navigation">
        <div class="umd-header-container-wrapper">
          <div class="umd-header-logo-column">
            <umd-element-nav-drawer>
              <div slot="primary-slide-links"></div>
              <div slot="primary-slide-content"></div>
              <div slot="children-slides"></div>
            </umd-element-nav-drawer>

            <div class="umd-header-logo">
              <a href="/">
                <img src="{{ random(logoOptions) }}"
                  alt="Office of the Provost, Division of Academic Affairs, University of Maryland" />
              </a>
            </div>
          </div>

          <div class="umd-header-nav-column">
            <div class="umd-header-nav-items" id="featured-nav">
              <umd-element-nav-item>
                <a href="/" slot="primary-link"><span>About</span></a>
              </umd-element-nav-item>

              <umd-element-nav-item>
                <a href="/" slot="primary-link">
                  <span>Provost Initiatives</span>
                </a>
                <div slot="dropdown-links">
                  <a href="https://provost.umd-staging.com/about/the-provost">
                    <span>Graduate Programs</span>
                  </a>
                  <a href="https://provost.umd-staging.com/about/contact">
                    <span>Admissions Process</span>
                  </a>
                </div>
              </umd-element-nav-item>

              <umd-element-nav-item>
                <a href="/" slot="primary-link">
                  <span>Leadership Areas</span>
                </a>

                <div slot="dropdown-links"></div>
              </umd-element-nav-item>
            </div>
          </div>
        </div>

        <div class="umd-nav-main-overlay"></div>
      </div>
    </div>
  </section>
{% endblock %}
