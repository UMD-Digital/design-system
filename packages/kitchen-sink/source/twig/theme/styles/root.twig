{% extends '../../_layout.twig' %}

{% block page %}
  <section class="pb-2xl">
    <div class="umd-lock">
      <h1 class="umd-sans-large font-bold mb-sm">
        <code>:root</code>
      </h1>
      <div class="umd-configuration-section">
        <div class="umd-rich-text">
          <p>
            The following custom properties and styles are applied to the <code>
              :root
            </code> pseudo class
          </p>
        </div>
      </div>

      <div class="bg-red block p-min text-white">
        <code>--red</code>
      </div>
      <div class="bg-gold block p-min">
        <code>--gold</code>
      </div>
      <div class="bg-white block p-min">
        <code>--white</code>
      </div>
      <div class="bg-black block p-min text-white">
        <code>--black</code>
      </div>
      <div class="bg-gray-darker block p-min text-white">
        <code>--grayDarker</code>
      </div>
      <div class="bg-gray-dark block p-min text-white">
        <code>--grayDark</code>
      </div>
      <div class="bg-gray-mediumAA block p-min">
        <code>--grayAA</code>
      </div>
      <div class="bg-gray-medium block p-min">
        <code>--gray</code>
      </div>
      <div class="bg-gray-light block p-min">
        <code>--grayLight</code>
      </div>
      <div class="bg-gray-lighter block p-min">
        <code>--grayLighter</code>
      </div>
      <div class="bg-gray-lightest block p-min">
        <code>--grayLightest</code>
      </div>
      <div class="bg-redDark block p-min text-white">
        <code>--redDark</code>
      </div>
      <div class="bg-blue block p-min">
        <code>--blue</code>
      </div>
      <div class="bg-green block p-min text-white">
        <code>--green</code>
      </div>

      <div class="block p-min font-sans">
        <code>--serif</code>
      </div>

      <div class="block p-min font-serif">
        <code>--sanSerif</code>
      </div>
      <div class="block p-min font-mono">
        <p>
          <code>
            fontFamily: <span class="text-green">
              'Interstate', Helvetica, Arial, Verdana, sans-serif
            </span>;
          </code>
        </p>
        <p>
          <code>fontSize: <span class="text-green">16px</span>;</code>
        </p>
        <p>
          <code>lineHeight: <span class="text-green">1.5em</span>;</code>
        </p>
      </div>
    </div>
  </section>
{% endblock %}
