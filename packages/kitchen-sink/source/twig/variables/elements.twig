{% extends '../_layout.twig' %}

{% block page %}
  <section class="pb-2xl">
    <div class="umd-lock">
      <h1 class="umd-sans-large font-bold mb-sm">
        Elements
      </h1>
      <div class="umd-configuration-section">
        <div class="umd-rich-text">
          <ul>
            <li>
              Call to Action links
              <a href="#cta">
                <em>
                  [.umd-cta-primary, .umd-cta-secondary, .umd-cta-outlined]
                </em>
              </a>
            </li>
            <li>
              Image with caption
              <a href="#image-caption">
                <em>[.umd-media-with-caption, .umd-caption]</em>
              </a>
            </li>
            <li>
              Loader
              <a href="#loader"><em>[.umd-loader, .umd-loader-legacy]</em></a>
            </li>
          </ul>
        </div>
      </div>

