{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "source",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "source",
    "strict": true,
    "target": "ES2020"
  },
  "include": ["source"],
  "exclude": ["dist"]
}
