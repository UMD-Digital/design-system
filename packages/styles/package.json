{
  "name": "@universityofmaryland/web-styles-library",
  "version": "1.7.0-beta.1",
  "description": "Styles used for use in the University of Maryland Design System",
  "main": "dist/index.js",
  "author": "UMD Web Services <digital@umd.edu>",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./accessibility": {
      "types": "./dist/accessibility.d.ts",
      "import": "./dist/accessibility.mjs",
      "require": "./dist/accessibility.js"
    },
    "./animation": {
      "types": "./dist/animation.d.ts",
      "import": "./dist/animation.mjs",
      "require": "./dist/animation.js"
    },
    "./element": {
      "types": "./dist/element.d.ts",
      "import": "./dist/element.mjs",
      "require": "./dist/element.js"
    },
    "./layout": {
      "types": "./dist/layout.d.ts",
      "import": "./dist/layout.mjs",
      "require": "./dist/layout.js"
    },
    "./token": {
      "types": "./dist/token.d.ts",
      "import": "./dist/token.mjs",
      "require": "./dist/token.js"
    },
    "./typography": {
      "types": "./dist/typography.d.ts",
      "import": "./dist/typography.mjs",
      "require": "./dist/typography.js"
    },
    "./utilities": {
      "types": "./dist/utilities.d.ts",
      "import": "./dist/utilities.mjs",
      "require": "./dist/utilities.js"
    }
  },
  "license": "MIT",
  "repository": "",
  "private": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "docs": "npx typedoc --options ./typedoc.json",
    "clean": "rm -rf dist",
    "prebuild": "node ../../source/update-badges.js",
    "release": "npm run test && npm run build && npm publish --access public",
    "build": "vite build && npm run build:cdn",
    "build:cdn": "BUILD_CDN=true vite build --mode production",
    "dev": "vite build --watch",
    "start": "npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:snapshot": "jest --updateSnapshot"
  },
  "dependencies": {
    "postcss": "~8.4.21",
    "postcss-discard-duplicates": "~7.0.1",
    "postcss-js": "~4.0.1",
    "postcss-nesting": "~13.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^7.2.1",
    "typescript": "^5.8.2",
    "vite": "^7.1.4",
    "vite-plugin-checker": "^0.10.3",
    "vite-plugin-dts": "^4.5.4"
  }
}
