{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "source",
    "baseUrl": "source",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "incremental": false,
    "paths": {
      "@universityofmaryland/web-token-library": ["../tokens/dist/index.d.ts"],
      "@universityofmaryland/web-token-library/*": ["../tokens/dist/*"],
      "@universityofmaryland/web-styles-library": ["../styles/dist/index.d.ts"],
      "@universityofmaryland/web-styles-library/*": ["../styles/dist/*"]
    }
  },
  "include": [
    "./source/**/*.ts"
  ],
  "exclude": [
    "./source/**/*.test.ts",
    "./source/**/*.spec.ts",
    "./source/__tests__/**",
    "./node_modules",
    "./dist"
  ]
}