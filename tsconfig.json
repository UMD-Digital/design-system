{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "target": "ES2020",
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "source",
    "outDir": "build",
    "baseUrl": "source",
  },
  "include": ["source/**/*", "examples/**/*"],
}
